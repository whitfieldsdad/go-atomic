      "id": "f055e039-446b-48ec-86c5-387a5b165fcd",
      "type": "execute-command",
      "data": {
        "command": "tail /var/log/ufw.log\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "e66f4b85-e3f5-44b2-88ad-131d8a6d5095",
      "name": "Check dependency 1/1",
      "description": "Check if /var/log/ufw.log exists.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -f \"/var/log/ufw.log\" ]; then echo -e \"\\n***** ufw NOT logging *****\\n\"; exit 1; fi\n",
