{
  "id": "d304b2dc-90b4-4465-a650-16ddd503f7b5",
  "name": "Overwrite Linux Log",
  "description": "This test overwrites the specified log. This technique was used by threat actor Rocke during the exploitation of Linux web servers.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "503f3f13-79d5-40e7-b6b6-e6e1b822f9fd",
      "type": "execute-command",
      "data": {
        "command": "echo 0\u003e #{log_path}\n",
        "command_type": "bash"
      },
      "elevation_required": true
    },
    {
      "id": "2cced2b5-c6e6-477b-bdb7-28c5786d73ad",
      "type": "execute-command",
      "data": {
        "command": "if [ \"/var/log/secure\" != \"#{log_path}\" ] ; then rm -f #{log_path} ; fi\n",
        "command_type": "bash"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "503f3f13-79d5-40e7-b6b6-e6e1b822f9fd",
      "p": "on-success",
      "o": "2cced2b5-c6e6-477b-bdb7-28c5786d73ad"
    },
    {
      "s": "503f3f13-79d5-40e7-b6b6-e6e1b822f9fd",
      "p": "on-failure",
      "o": "2cced2b5-c6e6-477b-bdb7-28c5786d73ad"
    }
  ],
  "tags": [
    "T1070",
    "T1070.002"
  ],
  "input_arguments": [
    {
      "name": "log_path",
      "type": "path",
      "description": "Path of specified log",
      "value": "/var/log/secure"
    }
  ]
}