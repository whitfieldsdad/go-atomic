    }
  ],
  "tags": [
    "T1560.001",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "input_file_folder",
      "type": "path",
      "description": "Path that should be compressed",
      "value": "$HOME/$USERNAME"
    },
    {
      "name": "output_file",
      "type": "path",
      "description": "File that should be output",
      "value": "$HOME/data.tar.gz"
    }
  ]
