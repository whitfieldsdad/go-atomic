{
  "id": "562d737f-2fc6-4b09-8c2a-7f8ff0828480",
  "name": "Delete a single file - FreeBSD/Linux/macOS",
  "description": "Delete a single file from the temporary directory\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "f1aaa55e-1f8d-44a4-87bd-f631fd1f3ead",
      "type": "execute-command",
      "data": {
        "command": "rm -f #{file_to_delete}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "ef3cb310-dbe1-43bb-a5c6-116153c553c8",
      "type": "execute-command",
      "data": {
        "command": "rm -rf #{parent_folder}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "6a7c22b6-b71f-4aa6-a065-efb8262be782",
      "name": "Check dependency 1/1",
      "description": "The file must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "test -e #{file_to_delete} \u0026\u0026 exit 0 || exit 1\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "309ed129-c2cb-4ea4-beac-d78bf2c2028e",
      "name": "Resolve dependency 1/1",
      "description": "The file must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "mkdir -p #{parent_folder} \u0026\u0026 touch #{file_to_delete}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "c786133d-27e7-40a2-a2ed-8236cfadaa5d",
      "name": "Re-check dependency 1/1",
      "description": "The file must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "test -e #{file_to_delete} \u0026\u0026 exit 0 || exit 1\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
