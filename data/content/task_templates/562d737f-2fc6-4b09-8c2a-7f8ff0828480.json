{
  "id": "562d737f-2fc6-4b09-8c2a-7f8ff0828480",
  "name": "Delete a single file - FreeBSD/Linux/macOS",
  "description": "Delete a single file from the temporary directory\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "992c2699-2ef6-4ce8-a65a-a9690f4b453d",
      "type": "execute-command",
      "data": {
        "command": "rm -f #{file_to_delete}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "26adad53-56d9-4e4e-9724-adf95a8f5eb2",
      "type": "execute-command",
      "data": {
        "command": "rm -rf #{parent_folder}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "e5ac46cb-44f4-43b1-8515-3ca48296015c",
      "name": "Check dependency 1/1",
      "description": "The file must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "test -e #{file_to_delete} \u0026\u0026 exit 0 || exit 1",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "817273e5-73bd-472b-8d1f-b5fc7445313d",
      "name": "Resolve dependency 1/1",
      "description": "The file must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "mkdir -p #{parent_folder} \u0026\u0026 touch #{file_to_delete}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "e525c699-9b21-4676-9141-25e12c237fb3",
      "name": "Re-check dependency 1/1",
      "description": "The file must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "test -e #{file_to_delete} \u0026\u0026 exit 0 || exit 1",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "992c2699-2ef6-4ce8-a65a-a9690f4b453d",
      "p": "on-success",
      "o": "26adad53-56d9-4e4e-9724-adf95a8f5eb2"
    },
    {
      "s": "992c2699-2ef6-4ce8-a65a-a9690f4b453d",
      "p": "on-failure",
      "o": "26adad53-56d9-4e4e-9724-adf95a8f5eb2"
    },
    {
      "s": "e5ac46cb-44f4-43b1-8515-3ca48296015c",
      "p": "on-success",
      "o": "992c2699-2ef6-4ce8-a65a-a9690f4b453d"
    },
    {
      "s": "e5ac46cb-44f4-43b1-8515-3ca48296015c",
      "p": "on-failure",
      "o": "817273e5-73bd-472b-8d1f-b5fc7445313d"
    },
    {
      "s": "817273e5-73bd-472b-8d1f-b5fc7445313d",
      "p": "on-success",
