{
  "id": "562d737f-2fc6-4b09-8c2a-7f8ff0828480",
  "name": "Delete a single file - FreeBSD/Linux/macOS",
  "description": "Delete a single file from the temporary directory\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "6a6888d4-fbe3-4446-b64e-22568bb3f9ae",
      "type": "execute-command",
      "data": {
        "command": "rm -f #{file_to_delete}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "29b7a3b6-3172-4c45-84f5-d8843fcc965c",
      "type": "execute-command",
      "data": {
        "command": "rm -rf #{parent_folder}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "f5804bdd-c2ff-4e4c-b872-e5ebe30ff423",
      "name": "Check dependency 1/1",
      "description": "The file must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "test -e #{file_to_delete} \u0026\u0026 exit 0 || exit 1",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "ca50f600-6e36-44de-927b-6dc83cc7c786",
      "name": "Resolve dependency 1/1",
      "description": "The file must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "mkdir -p #{parent_folder} \u0026\u0026 touch #{file_to_delete}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "dadc341c-220c-47f3-8157-bdce7a855186",
      "name": "Re-check dependency 1/1",
      "description": "The file must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "test -e #{file_to_delete} \u0026\u0026 exit 0 || exit 1",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "6a6888d4-fbe3-4446-b64e-22568bb3f9ae",
      "p": "on-success",
      "o": "29b7a3b6-3172-4c45-84f5-d8843fcc965c"
    },
    {
      "s": "6a6888d4-fbe3-4446-b64e-22568bb3f9ae",
      "p": "on-failure",
      "o": "29b7a3b6-3172-4c45-84f5-d8843fcc965c"
    },
    {
      "s": "f5804bdd-c2ff-4e4c-b872-e5ebe30ff423",
      "p": "on-success",
      "o": "6a6888d4-fbe3-4446-b64e-22568bb3f9ae"
    },
    {
      "s": "f5804bdd-c2ff-4e4c-b872-e5ebe30ff423",
      "p": "on-failure",
      "o": "ca50f600-6e36-44de-927b-6dc83cc7c786"
    },
    {
      "s": "ca50f600-6e36-44de-927b-6dc83cc7c786",
      "p": "on-success",
      "o": "dadc341c-220c-47f3-8157-bdce7a855186"
