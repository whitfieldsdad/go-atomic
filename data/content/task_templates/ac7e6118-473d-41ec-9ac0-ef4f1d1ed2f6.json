  ],
  "input_arguments": [
    {
      "name": "file_path",
      "type": "path",
      "description": "Path of folder permission back",
      "value": "%temp%\\T1222.001-folder-perms-backup.txt"
    },
    {
      "name": "path",
      "type": "path",
      "description": "Path of folder to recursively set permissions on",
      "value": "C:\\Users\\Public\\*"
