{
  "id": "25e2be0e-96f7-4417-bd16-a4a2500e3802",
  "name": "Copy and Delete Mailbox Data on Linux",
  "description": "Copies and deletes mail data on Linux\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "2591e26a-5a29-40e5-88ac-4bb25124c81b",
      "type": "execute-command",
      "data": {
        "command": "mkdir -p /var/spool/mail/copy\nfor file in /var/spool/mail/*; do\n  if [ \"$(basename \"$file\")\" != \"copy\" ]\n  then\n    cp -R \"$file\" /var/spool/mail/copy/\n  fi\ndone\nrm -rf /var/spool/mail/copy/*\n",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "d83422f6-873d-48b1-9dc9-6a82dbfa83cd",
      "type": "execute-command",
      "data": {
        "command": "rm -rf /var/spool/mail/copy\n",
        "command_type": "bash"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "2591e26a-5a29-40e5-88ac-4bb25124c81b",
