{
  "id": "784e4011-bd1a-4ecd-a63a-8feb278512e6",
  "name": "Clear and Disable Bash History Logging",
  "description": "Clears the history and disable bash history logging of the current shell and future shell sessions\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "8330e18d-6e31-481d-8204-1774994e5c65",
      "type": "execute-command",
      "data": {
        "command": "set +o history\necho 'set +o history' \u003e\u003e ~/.bashrc\n. ~/.bashrc\nhistory -c\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "5e2863e7-c1d7-465c-96bd-5ab264095052",
      "type": "execute-command",
      "data": {
        "command": "sed -i 's/set +o history//g' ~/.bashrc\n. ~/.bashrc\nset -o history\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "8330e18d-6e31-481d-8204-1774994e5c65",
      "p": "on-success",
      "o": "5e2863e7-c1d7-465c-96bd-5ab264095052"
    },
    {
      "s": "8330e18d-6e31-481d-8204-1774994e5c65",
      "p": "on-failure",
      "o": "5e2863e7-c1d7-465c-96bd-5ab264095052"
    }
  ],
