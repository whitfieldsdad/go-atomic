  "name": "Stop Crowdstrike Falcon on Linux",
  "description": "Stop and disable Crowdstrike Falcon on Linux\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "f596d705-6108-4959-9d03-3edb3f9fb5eb",
      "type": "execute-command",
      "data": {
        "command": "sudo systemctl stop falcon-sensor.service\nsudo systemctl disable falcon-sensor.service\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "2d1aa65a-b9dc-470c-a1fc-740f901a1f2f",
      "type": "execute-command",
      "data": {
        "command": "sudo systemctl enable falcon-sensor.service\nsudo systemctl start falcon-sensor.service\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
