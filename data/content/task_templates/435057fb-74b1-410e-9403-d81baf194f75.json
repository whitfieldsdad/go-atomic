{
  "id": "435057fb-74b1-410e-9403-d81baf194f75",
  "name": "Cron - Replace crontab with referenced file",
  "description": "This test replaces the current user's crontab file with the contents of the referenced file. This technique was used by numerous IoT automated exploitation attacks.\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "75b95586-d97c-430b-bf3b-26fcb63ff968",
      "type": "execute-command",
      "data": {
        "command": "crontab -l \u003e /tmp/notevil\necho \"* * * * * #{command}\" \u003e #{tmp_cron} \u0026\u0026 crontab #{tmp_cron}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "37ec935c-8e2d-43e6-8e36-adb4f9ac2350",
      "type": "execute-command",
      "data": {
        "command": "crontab /tmp/notevil\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "75b95586-d97c-430b-bf3b-26fcb63ff968",
      "p": "on-success",
      "o": "37ec935c-8e2d-43e6-8e36-adb4f9ac2350"
    },
    {
