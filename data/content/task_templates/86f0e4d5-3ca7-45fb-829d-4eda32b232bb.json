{
  "id": "86f0e4d5-3ca7-45fb-829d-4eda32b232bb",
  "name": "Delete system log files using shred utility",
  "description": "This test overwrites the contents of the log file with zero bytes(-z) using three passes(-n 3) of data, and then delete the file(-u) securely\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "dc9c13ab-4b4c-4791-9d8e-788f3e28c63d",
      "type": "execute-command",
      "data": {
        "command": "sudo shred -u -z -n 3 #{system_log_path}\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "fd8b7b29-e9a0-41df-af46-45d455a98ed1",
      "name": "Check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{system_log_path}\n",
        "command_type": ""
      },
      "elevation_required": true
    },
    {
      "id": "734dd5d1-c31f-4c5a-b2ba-cf5e9613de11",
      "name": "Resolve dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "touch #{system_log_path}\n",
        "command_type": ""
      },
      "elevation_required": true
    },
    {
      "id": "c65cc5b9-a3e6-47a3-91d1-79de3b0ac59e",
      "name": "Re-check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{system_log_path}\n",
        "command_type": ""
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "fd8b7b29-e9a0-41df-af46-45d455a98ed1",
      "p": "on-success",
      "o": "dc9c13ab-4b4c-4791-9d8e-788f3e28c63d"
    },
    {
      "s": "fd8b7b29-e9a0-41df-af46-45d455a98ed1",
      "p": "on-failure",
      "o": "734dd5d1-c31f-4c5a-b2ba-cf5e9613de11"
    },
    {
      "s": "734dd5d1-c31f-4c5a-b2ba-cf5e9613de11",
      "p": "on-success",
      "o": "c65cc5b9-a3e6-47a3-91d1-79de3b0ac59e"
    },
    {
      "s": "c65cc5b9-a3e6-47a3-91d1-79de3b0ac59e",
      "p": "on-failure",
      "o": "dc9c13ab-4b4c-4791-9d8e-788f3e28c63d"
    }
  ],
  "tags": [
    "T1070",
