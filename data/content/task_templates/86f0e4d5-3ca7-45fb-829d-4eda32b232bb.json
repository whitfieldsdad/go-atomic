{
  "id": "86f0e4d5-3ca7-45fb-829d-4eda32b232bb",
  "name": "Delete system log files using shred utility",
  "description": "This test overwrites the contents of the log file with zero bytes(-z) using three passes(-n 3) of data, and then delete the file(-u) securely\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "d1f6cbee-9690-4a2e-bb8f-72f5e32d0900",
      "type": "execute-command",
      "data": {
        "command": "sudo shred -u -z -n 3 #{system_log_path}",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "1f3a5d03-df4c-4232-bd92-16549e91cbbe",
      "name": "Check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{system_log_path}",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "1979b4dd-b12c-4a65-b77b-e9f117dd011d",
      "name": "Resolve dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "touch #{system_log_path}",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "b46f9a0f-2bdc-4f19-a7db-ec3948ccee7f",
      "name": "Re-check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{system_log_path}",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "1f3a5d03-df4c-4232-bd92-16549e91cbbe",
      "p": "on-success",
      "o": "d1f6cbee-9690-4a2e-bb8f-72f5e32d0900"
    },
    {
      "s": "1f3a5d03-df4c-4232-bd92-16549e91cbbe",
      "p": "on-failure",
      "o": "1979b4dd-b12c-4a65-b77b-e9f117dd011d"
    },
    {
      "s": "1979b4dd-b12c-4a65-b77b-e9f117dd011d",
      "p": "on-success",
      "o": "b46f9a0f-2bdc-4f19-a7db-ec3948ccee7f"
    },
    {
      "s": "b46f9a0f-2bdc-4f19-a7db-ec3948ccee7f",
      "p": "on-failure",
      "o": "d1f6cbee-9690-4a2e-bb8f-72f5e32d0900"
    }
  ],
  "tags": [
    "T1070",
    "T1070.002"
  ],
  "input_arguments": [
    {
      "name": "system_log_path",
      "type": "string",
      "description": "path to system.log",
      "value": "/var/log/system.log"
    }
  ]
}