{
  "id": "f89812e5-67d1-4f49-86fa-cbc6609ea86a",
  "name": "ESXi - Darkside system information discovery",
  "description": "Darkside ransomware utilises various ESXCLI commands to obtain information about the ESXi Host.\n[Reference](https://www.trendmicro.com/en_ph/research/21/e/darkside-linux-vms-targeted.html)\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "e3a91b32-e2be-45ff-8647-e49496fdf4cf",
      "type": "execute-command",
      "data": {
        "command": "echo \"\" | \"#{plink_file}\" \"#{vm_host}\" -ssh  -l \"#{vm_user}\" -pw \"#{vm_pass}\" -m \"#{cli_script}\"\n",
        "command_type": "command_prompt"
      },
      "elevation_required": false
    },
    {
      "id": "e8d0efb7-7d61-409d-8f9d-0aad2e4ef4f8",
      "name": "Check dependency 1/1",
      "description": "Check if plink is available.\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path \"#{plink_file}\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "40139f23-424d-47b5-bcf1-ff21f70b9b4a",
      "name": "Resolve dependency 1/1",
      "description": "Check if plink is available.\n",
      "type": "execute-command",
      "data": {
        "command": "New-Item -Type Directory \"PathToAtomicsFolder\\..\\ExternalPayloads\\\" -ErrorAction Ignore -Force | Out-Null\nInvoke-WebRequest \"https://the.earth.li/~sgtatham/putty/latest/w64/plink.exe\" -OutFile \"#{plink_file}\"\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "cdb1ec8b-5d42-4c8d-8ab4-29faac123b8b",
      "name": "Re-check dependency 1/1",
      "description": "Check if plink is available.\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path \"#{plink_file}\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "e8d0efb7-7d61-409d-8f9d-0aad2e4ef4f8",
      "p": "on-success",
      "o": "e3a91b32-e2be-45ff-8647-e49496fdf4cf"
    },
    {
      "s": "e8d0efb7-7d61-409d-8f9d-0aad2e4ef4f8",
      "p": "on-failure",
      "o": "40139f23-424d-47b5-bcf1-ff21f70b9b4a"
    },
    {
      "s": "40139f23-424d-47b5-bcf1-ff21f70b9b4a",
      "p": "on-success",
      "o": "cdb1ec8b-5d42-4c8d-8ab4-29faac123b8b"
    },
    {
      "s": "cdb1ec8b-5d42-4c8d-8ab4-29faac123b8b",
      "p": "on-failure",
      "o": "e3a91b32-e2be-45ff-8647-e49496fdf4cf"
    }
  ],
  "tags": [
    "T1082",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "vm_host",
      "type": "string",
      "description": "Specify the host name or IP of the ESXi Server",
      "value": "atomic.local"
    },
    {
      "name": "vm_user",
      "type": "string",
      "description": "Specify the privilege user account on ESXi Server",
      "value": "root"
    },
    {
      "name": "vm_pass",
      "type": "string",
      "description": "Specify the privilege user password on ESXi Server",
      "value": "pass"
    },
    {
      "name": "plink_file",
      "type": "path",
      "description": "Path to Plink",
      "value": "PathToAtomicsFolder\\..\\ExternalPayloads\\plink.exe"
    },
    {
      "name": "cli_script",
      "type": "path",
      "description": "Path to file containing darkside ransomware discovery commands",
      "value": "PathToAtomicsFolder\\T1082\\src\\esx_darkside_discovery.txt"
    }
  ]
}