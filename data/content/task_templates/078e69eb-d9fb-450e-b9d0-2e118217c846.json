{
  "id": "078e69eb-d9fb-450e-b9d0-2e118217c846",
  "name": "Cron - Add script to /etc/cron.d folder",
  "description": "This test adds a script to /etc/cron.d folder configured to execute on a schedule.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "55bfa508-4e4e-4ae6-be35-f44e82c00d08",
      "type": "execute-command",
      "data": {
        "command": "echo \"#{command}\" \u003e /etc/cron.d/#{cron_script_name}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "e7a22d5f-5693-40b1-9a90-8e9b10511463",
      "type": "execute-command",
      "data": {
        "command": "rm /etc/cron.d/#{cron_script_name}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "55bfa508-4e4e-4ae6-be35-f44e82c00d08",
      "p": "on-success",
      "o": "e7a22d5f-5693-40b1-9a90-8e9b10511463"
    },
    {
      "s": "55bfa508-4e4e-4ae6-be35-f44e82c00d08",
      "p": "on-failure",
      "o": "e7a22d5f-5693-40b1-9a90-8e9b10511463"
    }
  ],
  "tags": [
    "T1053.003",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "command",
      "type": "string",
      "description": "Command to execute",
      "value": "echo '*/5     *       *       *       *       root    echo \"Hello from Atomic Red Team\"' \u003e /tmp/atomic.log"
    },
    {
      "name": "cron_script_name",
      "type": "string",
      "description": "Name of file to store in cron folder",
      "value": "persistevil"
    }
  ]
}