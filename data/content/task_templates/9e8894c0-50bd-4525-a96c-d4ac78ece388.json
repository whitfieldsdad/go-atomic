{
  "id": "9e8894c0-50bd-4525-a96c-d4ac78ece388",
  "name": "Create and Execute Batch Script",
  "description": "Creates and executes a simple batch script. Upon execution, CMD will briefly launch to run the batch script then close again.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "34f7680a-aca3-4440-9ceb-0404719c79e7",
      "type": "execute-command",
      "data": {
        "command": "Start-Process \"#{script_path}\"\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "0656c730-d28c-46a0-936a-ebbd29277fa7",
      "type": "execute-command",
      "data": {
        "command": "Remove-Item \"#{script_path}\" -Force -ErrorAction Ignore\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "ad8ce085-aaa7-4ff6-9f27-e309b1a1356b",
      "name": "Check dependency 1/1",
      "description": "Batch file must exist on disk at specified location (#{script_path})\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path \"#{script_path}\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "68eaf072-9012-4aa4-a6db-24e252374b2e",
      "name": "Resolve dependency 1/1",
      "description": "Batch file must exist on disk at specified location (#{script_path})\n",
      "type": "execute-command",
      "data": {
        "command": "New-Item \"#{script_path}\" -Force | Out-Null\nSet-Content -Path \"#{script_path}\" -Value \"#{command_to_execute}\"\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "8302f2bd-8259-49ac-b9fa-4c5e8b2405d4",
      "name": "Re-check dependency 1/1",
      "description": "Batch file must exist on disk at specified location (#{script_path})\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path \"#{script_path}\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
