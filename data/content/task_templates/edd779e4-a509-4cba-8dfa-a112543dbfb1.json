{
  "id": "edd779e4-a509-4cba-8dfa-a112543dbfb1",
  "name": "Delete an entire folder - Windows PowerShell",
  "description": "Recursively delete a folder in the temporary directory using Powershell. Upon execution, no output will be displayed. Use File Explorer to verify the folder was deleted.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "15a2196a-1b82-447a-bad1-baa47057d1ad",
      "type": "execute-command",
      "data": {
        "command": "Remove-Item -Path #{folder_to_delete} -Recurse\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "fe0f8d8f-1553-4b9b-9732-ddbc96ffd5d9",
      "name": "Check dependency 1/1",
      "description": "The folder to delete must exist on disk at specified location (#{folder_to_delete})\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path #{folder_to_delete}) {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "94a9219a-6598-4928-b6cd-5a2ab50640e7",
      "name": "Resolve dependency 1/1",
      "description": "The folder to delete must exist on disk at specified location (#{folder_to_delete})\n",
      "type": "execute-command",
      "data": {
        "command": "New-Item -Path #{folder_to_delete} -Type Directory | Out-Null\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "39efb278-3b56-4064-a9ca-a927c212dbdd",
      "name": "Re-check dependency 1/1",
      "description": "The folder to delete must exist on disk at specified location (#{folder_to_delete})\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path #{folder_to_delete}) {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
