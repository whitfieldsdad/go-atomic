{
  "id": "3824130e-a6e4-4528-8091-3a52eeb540f6",
  "name": "Copy and Delete Mailbox Data on macOS",
  "description": "Copies and deletes mail data on macOS\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "8d2761b6-2b4b-43d3-9833-eb64828e9f5e",
      "type": "execute-command",
      "data": {
        "command": "mkdir ~/Library/Mail/copy\ncp -R ~/Library/Mail/* ~/Library/Mail/copy\nrm -rf ~/Library/Mail/copy/*\n",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "15ce09cf-ad12-4d07-823c-687d30b4708b",
      "type": "execute-command",
      "data": {
        "command": "rm -rf ~/Library/Mail/copy\n",
        "command_type": "bash"
      },
      "elevation_required": false
    }
  ],
