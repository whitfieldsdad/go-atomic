{
  "id": "810a465f-cd4f-47bc-b43e-d2de3b033ecc",
  "name": "Delete system log files using OSAScript",
  "description": "This test deletes the system log file using osascript via \"do shell script\"(sh/bash by default) which in-turn spawns rm utility, requires admin privileges\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "640ac91c-d15e-41b3-a0e8-5ad14e7b5beb",
      "type": "execute-command",
      "data": {
        "command": "osascript -e 'do shell script \"rm #{system_log_path}\" with administrator privileges'",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "a1f43d35-52ac-40ec-a315-ab251f5736b7",
      "name": "Check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{system_log_path}",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "311a1a18-60df-4b79-841d-cb3d8ca76455",
      "name": "Resolve dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "touch #{system_log_path}",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "92cec991-8c20-42f1-affe-47fe9424f5c5",
      "name": "Re-check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{system_log_path}",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "a1f43d35-52ac-40ec-a315-ab251f5736b7",
      "p": "on-success",
      "o": "640ac91c-d15e-41b3-a0e8-5ad14e7b5beb"
    },
    {
      "s": "a1f43d35-52ac-40ec-a315-ab251f5736b7",
      "p": "on-failure",
      "o": "311a1a18-60df-4b79-841d-cb3d8ca76455"
    },
    {
      "s": "311a1a18-60df-4b79-841d-cb3d8ca76455",
      "p": "on-success",
      "o": "92cec991-8c20-42f1-affe-47fe9424f5c5"
    },
    {
      "s": "92cec991-8c20-42f1-affe-47fe9424f5c5",
      "p": "on-failure",
      "o": "640ac91c-d15e-41b3-a0e8-5ad14e7b5beb"
    }
  ],
  "tags": [
    "T1070",
    "T1070.002"
  ],
  "input_arguments": [
    {
      "name": "system_log_path",
      "type": "string",
      "description": "path to system.log",
      "value": "/var/log/system.log"
    }
  ]
}