{
  "id": "342cc723-127c-4d3a-8292-9c0c6b4ecadc",
  "name": "Modify SSH Authorized Keys",
  "description": "Modify contents of \u003cuser-home\u003e/.ssh/authorized_keys to maintain persistence on victim host. \nIf the user is able to save the same contents in the authorized_keys file, it shows user can modify the file.\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "5cd6981f-3b4a-416e-ba44-2d5e196c63d3",
      "type": "execute-command",
      "data": {
        "command": "if [ -f ~/.ssh/authorized_keys ]; then ssh_authorized_keys=$(cat ~/.ssh/authorized_keys); echo \"$ssh_authorized_keys\" \u003e ~/.ssh/authorized_keys; fi;\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "1c3a3137-d13b-4a61-a59d-2306b8b5860f",
      "type": "execute-command",
      "data": {
        "command": "unset ssh_authorized_keys\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "5cd6981f-3b4a-416e-ba44-2d5e196c63d3",
      "p": "on-success",
      "o": "1c3a3137-d13b-4a61-a59d-2306b8b5860f"
    },
    {
      "s": "5cd6981f-3b4a-416e-ba44-2d5e196c63d3",
      "p": "on-failure",
      "o": "1c3a3137-d13b-4a61-a59d-2306b8b5860f"
    }
  ],
  "tags": [
    "T1098.004",
    "atomic-red-team"
  ]
}