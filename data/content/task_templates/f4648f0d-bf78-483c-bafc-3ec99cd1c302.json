      },
      "elevation_required": true
    }
  ],
  "flows": [],
  "tags": [
    "T1529"
  ],
  "input_arguments": [
    {
      "name": "timeout",
      "type": "integer",
      "description": "Timeout period before restart (seconds)",
      "value": "1"
    }
  ]
}