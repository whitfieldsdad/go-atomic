{
  "id": "9be9b827-ff47-4e1b-bef8-217db6fb7283",
  "name": "Set a SetUID flag on file (freebsd)",
  "description": "This test sets the SetUID flag on a file in FreeBSD.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "380550ad-02dd-4151-af47-49a15fae9f84",
      "type": "execute-command",
      "data": {
        "command": "touch #{file_to_setuid}\nchown root #{file_to_setuid}\nchmod u+xs #{file_to_setuid}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "60805e2c-4c07-4459-8242-8945d1f72635",
      "type": "execute-command",
      "data": {
        "command": "rm #{file_to_setuid}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "380550ad-02dd-4151-af47-49a15fae9f84",
      "p": "on-success",
      "o": "60805e2c-4c07-4459-8242-8945d1f72635"
    },
    {
      "s": "380550ad-02dd-4151-af47-49a15fae9f84",
      "p": "on-failure",
      "o": "60805e2c-4c07-4459-8242-8945d1f72635"
    }
  ],
  "tags": [
    "T1548.001",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "file_to_setuid",
      "type": "path",
      "description": "Path of file to set SetUID flag",
      "value": "/tmp/evilBinary"
    }
  ]
}