{
  "id": "9be9b827-ff47-4e1b-bef8-217db6fb7283",
  "name": "Set a SetUID flag on file (freebsd)",
  "description": "This test sets the SetUID flag on a file in FreeBSD.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "9c5d98ef-901d-4247-afd2-9a16ffd09fc0",
      "type": "execute-command",
      "data": {
        "command": "touch #{file_to_setuid}\nchown root #{file_to_setuid}\nchmod u+xs #{file_to_setuid}\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "bbf36769-5a7c-4a53-964a-2f7caf0ee8b3",
      "type": "execute-command",
      "data": {
        "command": "rm #{file_to_setuid}\n",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "9c5d98ef-901d-4247-afd2-9a16ffd09fc0",
      "p": "on-success",
      "o": "bbf36769-5a7c-4a53-964a-2f7caf0ee8b3"
    },
    {
      "s": "9c5d98ef-901d-4247-afd2-9a16ffd09fc0",
      "p": "on-failure",
      "o": "bbf36769-5a7c-4a53-964a-2f7caf0ee8b3"
    }
  ],
  "tags": [
    "T1548",
    "T1548.001"
  ],
  "input_arguments": [
    {
      "name": "file_to_setuid",
      "type": "path",
      "description": "Path of file to set SetUID flag",
      "value": "/tmp/evilBinary"
    }
  ]
}