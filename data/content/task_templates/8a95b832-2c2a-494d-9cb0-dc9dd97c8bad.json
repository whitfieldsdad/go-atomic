{
  "id": "8a95b832-2c2a-494d-9cb0-dc9dd97c8bad",
  "name": "Turn off UFW logging",
  "description": "Turn off the Uncomplicated Firewall (UFW) logging. \n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "1755a13f-600f-43bc-9f4d-4c02f2967ea6",
      "type": "execute-command",
      "data": {
        "command": "ufw logging off\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "84b043a7-f2f9-4b4c-8388-87773ba6053a",
      "type": "execute-command",
      "data": {
        "command": "ufw logging low\nufw status verbose\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "918fe7fd-ce68-4885-9629-a22a53cc82ca",
      "name": "Check dependency 1/1",
      "description": "Check if ufw is installed on the machine and enabled.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -x \"$(command -v ufw)\" ]; then echo -e \"\\n***** ufw NOT installed *****\\n\"; exit 1; fi\nif echo \"$(ufw status)\" |grep -q \"inactive\"; then echo -e \"\\n***** ufw inactive *****\\n\"; exit 1; fi \n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "2978dfdb-f6a6-46d0-86de-3632b2b35f94",
      "name": "Resolve dependency 1/1",
      "description": "Check if ufw is installed on the machine and enabled.\n",
      "type": "execute-command",
      "data": {
        "command": "echo \"\"\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "af2b2269-8627-486b-8a88-eae4cc1f2b67",
      "name": "Re-check dependency 1/1",
      "description": "Check if ufw is installed on the machine and enabled.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -x \"$(command -v ufw)\" ]; then echo -e \"\\n***** ufw NOT installed *****\\n\"; exit 1; fi\nif echo \"$(ufw status)\" |grep -q \"inactive\"; then echo -e \"\\n***** ufw inactive *****\\n\"; exit 1; fi \n",
        "command_type": ""
      },
      "elevation_required": false
    }
