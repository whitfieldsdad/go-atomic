{
  "id": "0ac21132-4485-4212-a681-349e8a6637cd",
  "name": "Connection Proxy",
  "description": "Enable traffic redirection.\n\nNote that this test may conflict with pre-existing system configuration.\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "cc42f7ce-6910-4009-8963-b90be6b955fa",
      "type": "execute-command",
      "data": {
        "command": "export #{proxy_scheme}_proxy=#{proxy_server}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "6529c594-8691-434c-854c-660cfc167aa7",
      "type": "execute-command",
      "data": {
        "command": "unset http_proxy\nunset https_proxy",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "cc42f7ce-6910-4009-8963-b90be6b955fa",
      "p": "on-success",
      "o": "6529c594-8691-434c-854c-660cfc167aa7"
    },
    {
      "s": "cc42f7ce-6910-4009-8963-b90be6b955fa",
      "p": "on-failure",
      "o": "6529c594-8691-434c-854c-660cfc167aa7"
    }
  ],
  "tags": [
    "T1090",
    "T1090.001"
  ],
  "input_arguments": [
    {
      "name": "proxy_server",
      "type": "url",
      "description": "Proxy server URL (host:port)",
      "value": "127.0.0.1:8080"
    },
    {
      "name": "proxy_scheme",
      "type": "string",
      "description": "Protocol to proxy (http or https)",
      "value": "http"
    }
  ]
}