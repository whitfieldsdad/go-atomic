{
  "id": "0ac21132-4485-4212-a681-349e8a6637cd",
  "name": "Connection Proxy",
  "description": "Enable traffic redirection.\n\nNote that this test may conflict with pre-existing system configuration.\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "f0715a2e-eee4-4d24-9ffa-2d892a39c7a3",
      "type": "execute-command",
      "data": {
        "command": "export #{proxy_scheme}_proxy=#{proxy_server}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "b598ad55-5012-407d-bdc8-dc3f20b8bda7",
      "type": "execute-command",
      "data": {
        "command": "unset http_proxy\nunset https_proxy\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "f0715a2e-eee4-4d24-9ffa-2d892a39c7a3",
      "p": "on-success",
      "o": "b598ad55-5012-407d-bdc8-dc3f20b8bda7"
    },
    {
      "s": "f0715a2e-eee4-4d24-9ffa-2d892a39c7a3",
      "p": "on-failure",
      "o": "b598ad55-5012-407d-bdc8-dc3f20b8bda7"
    }
  ],
  "tags": [
    "T1090",
    "T1090.001"
  ],
  "input_arguments": [
    {
      "name": "proxy_scheme",
      "type": "string",
      "description": "Protocol to proxy (http or https)",
      "value": "http"
    },
    {
      "name": "proxy_server",
      "type": "url",
      "description": "Proxy server URL (host:port)",
      "value": "127.0.0.1:8080"
    }
  ]
}