{
  "id": "d141afeb-d2bc-4934-8dd5-b7dba0f9f67a",
  "name": "Create a new user in FreeBSD with `root` GID.",
  "description": "Creates a new user in FreeBSD and adds the user to the `root` group. This technique was used by adversaries during the Butter attack campaign.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "456ffc91-a1c5-4372-98a7-3e4bd6e9942a",
      "type": "execute-command",
      "data": {
        "command": "pw useradd #{username} -g 0 -d /root -s /bin/sh\necho \"#{password}\" | pw usermod #{username} -h 0\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "daa308a6-93ed-45ff-90c4-93b3f876540f",
      "type": "execute-command",
      "data": {
        "command": "pw userdel #{username}\n",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "456ffc91-a1c5-4372-98a7-3e4bd6e9942a",
      "p": "on-success",
      "o": "daa308a6-93ed-45ff-90c4-93b3f876540f"
    },
    {
      "s": "456ffc91-a1c5-4372-98a7-3e4bd6e9942a",
      "p": "on-failure",
      "o": "daa308a6-93ed-45ff-90c4-93b3f876540f"
    }
  ],
  "tags": [
    "T1136",
    "T1136.001"
  ],
  "input_arguments": [
    {
      "name": "username",
      "type": "string",
      "description": "Username of the user to create",
      "value": "butter"
    },
    {
      "name": "password",
      "type": "string",
      "description": "Password of the user to create",
      "value": "BetterWithButter"
    }
  ]
}