{
  "id": "1a01f6b8-b1e8-418e-bbe3-78a6f822759e",
  "name": "Encrypt files using openssl utility - macOS",
  "description": "This test encrypts the file(s) using the openssl utility\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "7ca91d6f-e208-47f0-a084-0db01181a7f2",
      "type": "execute-command",
      "data": {
        "command": "openssl enc #{encryption_option} -in #{input_file_path} -out #{output_file_name}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "7ac7a781-91e4-4f05-9f50-87c2c3819ef6",
      "type": "execute-command",
      "data": {
        "command": "rm #{output_file_name}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "7ca91d6f-e208-47f0-a084-0db01181a7f2",
      "p": "on-success",
      "o": "7ac7a781-91e4-4f05-9f50-87c2c3819ef6"
    },
    {
      "s": "7ca91d6f-e208-47f0-a084-0db01181a7f2",
      "p": "on-failure",
      "o": "7ac7a781-91e4-4f05-9f50-87c2c3819ef6"
    }
  ],
  "tags": [
    "T1486",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "encryption_option",
      "type": "string",
      "description": "Specifiy the required encryption option",
      "value": "-pbkdf2"
    },
    {
      "name": "input_file_path",
      "type": "path",
      "description": "Path to the file that you want to encrypt",
      "value": "~/test.txt"
    },
    {
      "name": "output_file_name",
      "type": "string",
      "description": "Path to the file that you want to encrypt",
      "value": "ARTFile"
    }
  ]
}