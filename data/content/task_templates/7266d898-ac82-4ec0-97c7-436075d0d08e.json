    {
      "id": "17b684fa-9c84-4b41-b8af-7ce9ebedb511",
      "name": "Check dependency 2/2",
      "description": "The `atd` daemon must be running\n",
      "type": "execute-command",
      "data": {
        "command": "if [ $(uname) = 'Linux' ]; then systemctl status atd || service atd status; fi;\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
