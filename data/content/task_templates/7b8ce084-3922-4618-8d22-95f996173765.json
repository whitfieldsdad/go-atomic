{
  "id": "7b8ce084-3922-4618-8d22-95f996173765",
  "name": "Encrypt files using gpg (FreeBSD/Linux)",
  "description": "Uses gpg to encrypt a file\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "3b21e199-243a-4b9a-853d-bae8d4c932ac",
      "type": "execute-command",
      "data": {
        "command": "echo \"#{pwd_for_encrypted_file}\" | $which_gpg --batch --yes --passphrase-fd 0 --cipher-algo #{encryption_alg} -o #{encrypted_file_path} -c #{input_file_path}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "f2333a75-2bc8-46e0-acb5-1f7cd3879947",
      "type": "execute-command",
      "data": {
        "command": "rm #{encrypted_file_path}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "b405f514-3a61-4508-a936-9502900d1621",
      "name": "Check dependency 1/1",
      "description": "Finds where gpg is located\n",
      "type": "execute-command",
      "data": {
        "command": "which_gpg=`which gpg`\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "5b1d39df-bfe4-472d-9a20-08c69b2ba4e8",
      "name": "Resolve dependency 1/1",
      "description": "Finds where gpg is located\n",
      "type": "execute-command",
      "data": {
        "command": "(which pkg \u0026\u0026 pkg install -y gnupg)||(which yum \u0026\u0026 yum -y install epel-release gpg)||(which apt-get \u0026\u0026 DEBIAN_FRONTEND=noninteractive apt-get install -y gpg)\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "8f1dfdf6-bcd2-498b-ba4c-1b51f18d4e4c",
      "name": "Re-check dependency 1/1",
      "description": "Finds where gpg is located\n",
      "type": "execute-command",
      "data": {
        "command": "which_gpg=`which gpg`\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "3b21e199-243a-4b9a-853d-bae8d4c932ac",
      "p": "on-success",
      "o": "f2333a75-2bc8-46e0-acb5-1f7cd3879947"
    },
    {
      "s": "3b21e199-243a-4b9a-853d-bae8d4c932ac",
      "p": "on-failure",
      "o": "f2333a75-2bc8-46e0-acb5-1f7cd3879947"
    },
    {
      "s": "b405f514-3a61-4508-a936-9502900d1621",
      "p": "on-success",
      "o": "3b21e199-243a-4b9a-853d-bae8d4c932ac"
    },
    {
      "s": "b405f514-3a61-4508-a936-9502900d1621",
      "p": "on-failure",
      "o": "5b1d39df-bfe4-472d-9a20-08c69b2ba4e8"
    },
    {
      "s": "5b1d39df-bfe4-472d-9a20-08c69b2ba4e8",
      "p": "on-success",
      "o": "8f1dfdf6-bcd2-498b-ba4c-1b51f18d4e4c"
    },
    {
      "s": "8f1dfdf6-bcd2-498b-ba4c-1b51f18d4e4c",
      "p": "on-failure",
      "o": "3b21e199-243a-4b9a-853d-bae8d4c932ac"
    }
  ],
  "tags": [
    "T1486"
  ],
  "input_arguments": [
    {
      "name": "encryption_alg",
      "type": "string",
      "description": "encryption algorithm of the file",
      "value": "AES-256"
    },
    {
      "name": "pwd_for_encrypted_file",
      "type": "string",
      "description": "the password that you want for the encrypted file",
      "value": "passwd"
    },
    {
      "name": "encrypted_file_path",
      "type": "path",
      "description": "path to the encrypted file",
      "value": "/tmp/passwd.gpg"
    },
    {
      "name": "input_file_path",
      "type": "path",
      "description": "path to the file that you want to encrypt",
      "value": "/etc/passwd"
    }
  ]
}