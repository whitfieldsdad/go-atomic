{
  "id": "7b8ce084-3922-4618-8d22-95f996173765",
  "name": "Encrypt files using gpg (FreeBSD/Linux)",
  "description": "Uses gpg to encrypt a file\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "3fdb569e-e6f4-4ef2-9217-de556ffd5859",
      "type": "execute-command",
      "data": {
        "command": "echo \"#{pwd_for_encrypted_file}\" | $which_gpg --batch --yes --passphrase-fd 0 --cipher-algo #{encryption_alg} -o #{encrypted_file_path} -c #{input_file_path}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "06b316c6-874a-43fa-8f91-650980089c41",
      "type": "execute-command",
      "data": {
        "command": "rm #{encrypted_file_path}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "bf14dd62-65d9-422b-90c8-ed89fb8d4a29",
      "name": "Check dependency 1/1",
      "description": "Finds where gpg is located\n",
      "type": "execute-command",
      "data": {
        "command": "which_gpg=`which gpg`\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "ed4d63da-a9ab-4336-80bf-772e1bb3f0ea",
      "name": "Resolve dependency 1/1",
      "description": "Finds where gpg is located\n",
      "type": "execute-command",
      "data": {
        "command": "(which pkg \u0026\u0026 pkg install -y gnupg)||(which yum \u0026\u0026 yum -y install epel-release gpg)||(which apt-get \u0026\u0026 DEBIAN_FRONTEND=noninteractive apt-get install -y gpg)\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "eb72ebf6-c222-463d-b4bb-6987a1229806",
      "name": "Re-check dependency 1/1",
      "description": "Finds where gpg is located\n",
      "type": "execute-command",
      "data": {
        "command": "which_gpg=`which gpg`\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "3fdb569e-e6f4-4ef2-9217-de556ffd5859",
      "p": "on-success",
      "o": "06b316c6-874a-43fa-8f91-650980089c41"
    },
    {
      "s": "3fdb569e-e6f4-4ef2-9217-de556ffd5859",
      "p": "on-failure",
