{
  "id": "dcebead7-6c28-4b4b-bf3c-79deb1b1fc7f",
  "name": "Create Volume Shadow Copy with vssadmin",
  "description": "This test is intended to be run on a domain Controller.\n\nThe Active Directory database NTDS.dit may be dumped by copying it from a Volume Shadow Copy.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "3db81dbc-9f1b-40ac-8849-bb7264fe52b1",
      "type": "execute-command",
      "data": {
        "command": "vssadmin.exe create shadow /for=#{drive_letter}\n",
        "command_type": "command_prompt"
      },
      "elevation_required": false
    },
    {
      "id": "a10b2fee-72fe-46e1-a65d-0e81fee3f287",
      "name": "Check dependency 1/1",
      "description": "Target must be a Domain Controller\n",
      "type": "execute-command",
      "data": {
        "command": "reg query HKEY_LOCAL_MACHINE\\SYSTEM\\CurrentControlSet\\Control\\ProductOptions  /v ProductType | findstr LanmanNT\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "bce79fc3-adbe-42e2-ad76-c3e4481a2718",
      "name": "Resolve dependency 1/1",
      "description": "Target must be a Domain Controller\n",
      "type": "execute-command",
      "data": {
        "command": "echo Sorry, Promoting this machine to a Domain Controller must be done manually\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "bd1e2fe7-3521-47e6-8f50-d2e4500a0f2c",
      "name": "Re-check dependency 1/1",
      "description": "Target must be a Domain Controller\n",
      "type": "execute-command",
      "data": {
        "command": "reg query HKEY_LOCAL_MACHINE\\SYSTEM\\CurrentControlSet\\Control\\ProductOptions  /v ProductType | findstr LanmanNT\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "a10b2fee-72fe-46e1-a65d-0e81fee3f287",
      "p": "on-success",
      "o": "3db81dbc-9f1b-40ac-8849-bb7264fe52b1"
    },
    {
      "s": "a10b2fee-72fe-46e1-a65d-0e81fee3f287",
      "p": "on-failure",
      "o": "bce79fc3-adbe-42e2-ad76-c3e4481a2718"
    },
    {
      "s": "bce79fc3-adbe-42e2-ad76-c3e4481a2718",
      "p": "on-success",
      "o": "bd1e2fe7-3521-47e6-8f50-d2e4500a0f2c"
    },
    {
      "s": "bd1e2fe7-3521-47e6-8f50-d2e4500a0f2c",
      "p": "on-failure",
      "o": "3db81dbc-9f1b-40ac-8849-bb7264fe52b1"
    }
  ],
  "tags": [
    "T1003.003",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "drive_letter",
      "type": "string",
      "description": "Drive letter to source VSC (including colon)",
      "value": "C:"
    }
  ]
