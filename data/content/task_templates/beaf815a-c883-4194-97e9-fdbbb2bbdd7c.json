  "name": "Edit UFW firewall user.rules file",
  "description": "Edit the Uncomplicated Firewall (UFW) rules file /etc/ufw/user.rules.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "3a05f5bd-7e7f-4ead-81c6-77de2ae3b8a6",
      "type": "execute-command",
      "data": {
        "command": "echo \"# THIS IS A COMMENT\" \u003e\u003e /etc/ufw/user.rules\ngrep \"# THIS IS A COMMENT\" /etc/ufw/user.rules\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "45bb3953-c967-4f4e-9cd6-3f44d8048827",
      "type": "execute-command",
      "data": {
        "command": "sed -i 's/# THIS IS A COMMENT//g' /etc/ufw/user.rules\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "cc6d6eec-0f5d-49d6-b310-e5f406fc788d",
      "name": "Check dependency 1/1",
      "description": "Check if /etc/ufw/user.rules exists.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -f \"/etc/ufw/user.rules\" ]; then echo -e \"\\n***** ufw NOT installed *****\\n\"; exit 1; fi\n",
        "command_type": ""
      },
      "elevation_required": false
    },
