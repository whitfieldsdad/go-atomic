{
  "id": "11e65d8d-e7e4-470e-a3ff-82bc56ad938e",
  "name": "AWS - GuardDuty Suspension or Deletion",
  "description": "Enables GuardDuty in AWS, upon successful creation this test will suspend and then delete the GuardDuty configuration.\n",
  "platforms": [
    "iaas:aws"
  ],
  "steps": [
    {
      "id": "c51ed23b-488c-4acd-a2dc-5608afc7850f",
      "type": "execute-command",
      "data": {
        "command": "detectorId=$(aws guardduty create-detector --enable --region \"#{region}\" | grep -oP '(?\u003c=\"DetectorId\": \")[^\"]*')\naws guardduty update-detector --no-enable --detector-id $detectorId\naws guardduty delete-detector --detector-id $detectorId\n",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "36258868-a523-4890-862e-04d84dd4e316",
      "type": "execute-command",
