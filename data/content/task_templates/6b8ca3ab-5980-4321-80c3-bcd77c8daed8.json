      "type": "execute-command",
      "data": {
        "command": "if [ -f \"/etc/#{syslog_config_file_name}\" ];\nthen sed -i \"\" '/#art_test_1562_006_2/d' /etc/#{syslog_config_file_name}\nfi",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
