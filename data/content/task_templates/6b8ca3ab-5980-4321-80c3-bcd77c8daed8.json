      "data": {
        "command": "if [ -f \"/etc/#{syslog_config_file_name}\" ];\nthen echo '#art_test_1562_006_2' \u003e\u003e /etc/#{syslog_config_file_name}\nfi\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "2727fb2b-9ae5-4bd0-954d-bc12691e6b1b",
      "type": "execute-command",
      "data": {
        "command": "if [ -f \"/etc/#{syslog_config_file_name}\" ];\nthen sed -i \"\" '/#art_test_1562_006_2/d' /etc/#{syslog_config_file_name}\nfi\n",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
