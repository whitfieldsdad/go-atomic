      "data": {
        "command": "if [ -f \"/etc/#{syslog_config_file_name}\" ];\nthen echo '#art_test_1562_006_2' \u003e\u003e /etc/#{syslog_config_file_name}\nfi",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
