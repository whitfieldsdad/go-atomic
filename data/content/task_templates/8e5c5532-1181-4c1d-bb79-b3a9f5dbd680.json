{
  "id": "8e5c5532-1181-4c1d-bb79-b3a9f5dbd680",
  "name": "NTFS Alternate Data Stream Access",
  "description": "Creates a file with an alternate data stream and simulates executing that hidden code/file. Upon execution, \"Stream Data Executed\" will be displayed.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "80a9ce25-97d5-4733-9146-d0b62e36ea95",
      "type": "execute-command",
      "data": {
        "command": "Add-Content -Path #{ads_file} -Value 'Write-Host \"Stream Data Executed\"' -Stream 'streamCommand'\n$streamcommand = Get-Content -Path #{ads_file} -Stream 'streamcommand'\nInvoke-Expression $streamcommand\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "91f7c1a2-0cc3-4fea-8157-11e073a24eb2",
      "type": "execute-command",
      "data": {
        "command": "Remove-Item #{ads_file} -Force -ErrorAction Ignore\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "eec9fb86-f129-4e07-afe3-0eef8685f123",
      "name": "Check dependency 1/1",
      "description": "Homedrive must be an NTFS drive\n",
      "type": "execute-command",
      "data": {
        "command": "if((Get-Volume -DriveLetter $env:HOMEDRIVE[0]).FileSystem -contains \"NTFS\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "e50dc23f-18e4-47a0-9acf-8b4307f4cbea",
      "name": "Resolve dependency 1/1",
      "description": "Homedrive must be an NTFS drive\n",
      "type": "execute-command",
      "data": {
        "command": "Write-Host Prereq's for this test cannot be met automatically\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "6294d912-dd0a-41b2-a2ee-35db08e96dde",
      "name": "Re-check dependency 1/1",
      "description": "Homedrive must be an NTFS drive\n",
      "type": "execute-command",
      "data": {
        "command": "if((Get-Volume -DriveLetter $env:HOMEDRIVE[0]).FileSystem -contains \"NTFS\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
