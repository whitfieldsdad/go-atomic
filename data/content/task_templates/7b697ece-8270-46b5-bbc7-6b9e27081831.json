  "name": "Edit UFW firewall main configuration file",
  "description": "Edit the Uncomplicated Firewall (UFW) main configuration file for setting \ndefault policies /etc/default/ufw.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "b9f34e84-88ef-4eb2-aa88-28a27d3c394b",
      "type": "execute-command",
      "data": {
        "command": "echo \"# THIS IS A COMMENT\" \u003e\u003e /etc/default/ufw\ngrep \"# THIS IS A COMMENT\" /etc/default/ufw\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "149de904-2737-4043-a3e8-640ac51546e8",
      "type": "execute-command",
      "data": {
        "command": "sed -i 's/# THIS IS A COMMENT//g' /etc/default/ufw\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "f6254683-a5a1-4696-9f05-c89014f18fb1",
      "name": "Check dependency 1/1",
      "description": "Check if /etc/default/ufw exists.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -f \"/etc/default/ufw\" ]; then echo -e \"\\n***** ufw NOT installed *****\\n\"; exit 1; fi\n",
        "command_type": ""
      },
      "elevation_required": true
