{
  "id": "396f997b-c5f8-4a96-bb2c-3c8795cf459d",
  "name": "Disable Windows Auto Reboot for current logon user",
  "description": "Disable Windows Auto Reboot for current logon user. Redline is using this as part of its defense evasion.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "c6fab4f5-91e0-4b93-b6d4-c4e36029ccf5",
      "type": "execute-command",
      "data": {
        "command": "reg add \"HKLM\\SOFTWARE\\Policies\\Microsoft\\Windows\\WindowsUpdate\\AU\" /v \"NoAutoRebootWithLoggedOnUsers\" /t REG_DWORD /d 1 /f\n",
        "command_type": "command_prompt"
      },
      "elevation_required": false
    },
    {
      "id": "5c529500-74a4-434c-ae91-1fea9fbbd3aa",
      "type": "execute-command",
      "data": {
        "command": "reg add \"HKLM\\SOFTWARE\\Policies\\Microsoft\\Windows\\WindowsUpdate\\AU\" /v \"NoAutoRebootWithLoggedOnUsers\" /t REG_DWORD /d 0 /f\n",
        "command_type": "command_prompt"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "c6fab4f5-91e0-4b93-b6d4-c4e36029ccf5",
      "p": "on-success",
      "o": "5c529500-74a4-434c-ae91-1fea9fbbd3aa"
    },
    {
      "s": "c6fab4f5-91e0-4b93-b6d4-c4e36029ccf5",
      "p": "on-failure",
      "o": "5c529500-74a4-434c-ae91-1fea9fbbd3aa"
    }
  ],
