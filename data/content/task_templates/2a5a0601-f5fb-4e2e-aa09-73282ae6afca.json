{
  "id": "2a5a0601-f5fb-4e2e-aa09-73282ae6afca",
  "name": "Copy the users GnuPG directory with rsync",
  "description": "Copy the users GnuPG (.gnupg) directory on a Mac or Linux system to a staging folder using the `rsync` command.\n",
  "platforms": [
    "darwin",
    "linux"
  ],
  "steps": [
    {
      "id": "e334f9f5-ca3a-458c-92c9-111919ca9c81",
      "type": "execute-command",
      "data": {
        "command": "mkdir #{output_folder}\nfind #{search_path} -type d -name '.gnupg' 2\u003e/dev/null -exec rsync -Rr {} #{output_folder} \\;\nexit 0\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "d5a26824-b105-4257-b1a8-ec248c14d160",
      "type": "execute-command",
      "data": {
        "command": "rm -rf #{output_folder}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "e334f9f5-ca3a-458c-92c9-111919ca9c81",
      "p": "on-success",
      "o": "d5a26824-b105-4257-b1a8-ec248c14d160"
    },
    {
      "s": "e334f9f5-ca3a-458c-92c9-111919ca9c81",
      "p": "on-failure",
      "o": "d5a26824-b105-4257-b1a8-ec248c14d160"
    }
  ],
  "tags": [
    "T1552",
    "T1552.004"
  ],
  "input_arguments": [
    {
      "name": "output_folder",
      "type": "path",
      "description": "Output folder containing a copy of the .gnupg directory",
      "value": "/tmp/GnuPG"
    },
    {
      "name": "search_path",
      "type": "path",
      "description": "Path where to start searching from",
      "value": "/"
    }
  ]
}