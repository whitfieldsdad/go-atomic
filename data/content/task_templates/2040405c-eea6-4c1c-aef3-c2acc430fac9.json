{
  "id": "2040405c-eea6-4c1c-aef3-c2acc430fac9",
  "name": "ESXi - VM Discovery using ESXCLI",
  "description": "An adversary will using ESXCLI to enumerate the Virtual Machines on the host prior to executing power off routine.\n[Reference](https://www.crowdstrike.com/blog/hypervisor-jackpotting-ecrime-actors-increase-targeting-of-esxi-servers/)\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "7ca9e661-759b-42b5-8191-dd8e17e7b772",
      "type": "execute-command",
      "data": {
        "command": "echo \"\" | \"#{plink_file}\" \"#{vm_host}\" -ssh  -l \"#{vm_user}\" -pw \"#{vm_pass}\" -m \"#{cli_script}\"\n",
        "command_type": "command_prompt"
      },
      "elevation_required": false
    },
    {
      "id": "a00d53de-74df-4b31-86a6-80ac557aa56f",
      "name": "Check dependency 1/1",
      "description": "Check if plink is available.\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path \"#{plink_file}\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "1a429ca9-40c7-4ac4-9bc1-9349ae51f5d5",
      "name": "Resolve dependency 1/1",
      "description": "Check if plink is available.\n",
      "type": "execute-command",
      "data": {
        "command": "New-Item -Type Directory \"PathToAtomicsFolder\\..\\ExternalPayloads\\\" -ErrorAction Ignore -Force | Out-Null\nInvoke-WebRequest \"https://the.earth.li/~sgtatham/putty/latest/w64/plink.exe\" -OutFile \"#{plink_file}\"\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "253e4d9a-dfd9-4e21-8773-ec45ac3c09b1",
      "name": "Re-check dependency 1/1",
      "description": "Check if plink is available.\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path \"#{plink_file}\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "a00d53de-74df-4b31-86a6-80ac557aa56f",
      "p": "on-success",
      "o": "7ca9e661-759b-42b5-8191-dd8e17e7b772"
    },
    {
      "s": "a00d53de-74df-4b31-86a6-80ac557aa56f",
      "p": "on-failure",
      "o": "1a429ca9-40c7-4ac4-9bc1-9349ae51f5d5"
    },
    {
      "s": "1a429ca9-40c7-4ac4-9bc1-9349ae51f5d5",
      "p": "on-success",
      "o": "253e4d9a-dfd9-4e21-8773-ec45ac3c09b1"
    },
    {
      "s": "253e4d9a-dfd9-4e21-8773-ec45ac3c09b1",
      "p": "on-failure",
      "o": "7ca9e661-759b-42b5-8191-dd8e17e7b772"
    }
  ],
  "tags": [
    "T1082",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "vm_host",
      "type": "string",
      "description": "Specify the host name or IP of the ESXi Server",
      "value": "atomic.local"
    },
    {
      "name": "vm_user",
      "type": "string",
      "description": "Specify the privilege user account on ESXi Server",
      "value": "root"
    },
    {
      "name": "vm_pass",
      "type": "string",
      "description": "Specify the privilege user password on ESXi Server",
      "value": "pass"
    },
    {
      "name": "plink_file",
      "type": "path",
      "description": "Path to Plink",
      "value": "PathToAtomicsFolder\\..\\ExternalPayloads\\plink.exe"
    },
    {
      "name": "cli_script",
      "type": "path",
      "description": "Path to file with discovery commands",
      "value": "PathToAtomicsFolder\\T1082\\src\\esx_vmdiscovery.txt"
    }
  ]
