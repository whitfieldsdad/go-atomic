{
  "id": "bf9f9d65-ee4d-4c3e-a843-777d04f19c38",
  "name": "Winlogon Shell Key Persistence - PowerShell",
  "description": "PowerShell code to set Winlogon shell key to execute a binary at logon along with explorer.exe.\n\nUpon successful execution, PowerShell will modify a registry value to execute cmd.exe upon logon/logoff.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "f8997aa5-6ea5-436e-8b00-e2cbb93d2296",
      "type": "execute-command",
      "data": {
        "command": "Set-ItemProperty \"HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Winlogon\\\" \"Shell\" \"explorer.exe, #{binary_to_execute}\" -Force\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "1e6f6cea-3290-4d80-aa86-defee170417c",
      "type": "execute-command",
      "data": {
        "command": "Remove-ItemProperty -Path \"HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Winlogon\\\" -Name \"Shell\" -Force -ErrorAction Ignore\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "f8997aa5-6ea5-436e-8b00-e2cbb93d2296",
      "p": "on-success",
      "o": "1e6f6cea-3290-4d80-aa86-defee170417c"
    },
    {
      "s": "f8997aa5-6ea5-436e-8b00-e2cbb93d2296",
      "p": "on-failure",
      "o": "1e6f6cea-3290-4d80-aa86-defee170417c"
    }
  ],
  "tags": [
    "T1547",
    "T1547.004"
  ],
  "input_arguments": [
    {
      "name": "binary_to_execute",
      "type": "path",
      "description": "Path of binary to execute",
      "value": "C:\\Windows\\System32\\cmd.exe"
    }
  ]
}