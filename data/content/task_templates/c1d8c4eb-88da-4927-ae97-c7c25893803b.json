{
  "id": "c1d8c4eb-88da-4927-ae97-c7c25893803b",
  "name": "Edit UFW firewall ufw.conf file",
  "description": "Edit the Uncomplicated Firewall (UFW) configuration file /etc/ufw/ufw.conf \nwhich controls if the firewall starts on boot and its logging level.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "7804adc8-870f-447f-8897-f5f13a727287",
      "type": "execute-command",
      "data": {
        "command": "echo \"# THIS IS A COMMENT\" \u003e\u003e /etc/ufw/ufw.conf\ngrep \"# THIS IS A COMMENT\" /etc/ufw/ufw.conf\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "b0b52abd-26c2-476a-a065-b595fd144a61",
      "type": "execute-command",
      "data": {
        "command": "sed -i 's/# THIS IS A COMMENT//g' /etc/ufw/ufw.conf\ncat /etc/ufw/ufw.conf\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "9b56c163-3721-4928-8bd4-110592ebf990",
      "name": "Check dependency 1/1",
      "description": "Check if /etc/ufw/ufw.conf exists.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -f \"/etc/ufw/ufw.conf\" ]; then echo -e \"\\n***** ufw NOT installed *****\\n\"; exit 1; fi\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "2727928b-dc29-4091-b0b7-71717b159d50",
      "name": "Resolve dependency 1/1",
      "description": "Check if /etc/ufw/ufw.conf exists.\n",
      "type": "execute-command",
      "data": {
        "command": "echo \"\"\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "16ed361c-0ff5-4533-948b-9b17fe215f2d",
      "name": "Re-check dependency 1/1",
      "description": "Check if /etc/ufw/ufw.conf exists.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -f \"/etc/ufw/ufw.conf\" ]; then echo -e \"\\n***** ufw NOT installed *****\\n\"; exit 1; fi\n",
        "command_type": ""
      },
      "elevation_required": false
    }
