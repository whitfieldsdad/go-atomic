{
  "id": "645f0f5a-ef09-48d8-b9bc-f0e24c642d72",
  "name": "Encrypt files using 7z utility - macOS",
  "description": "This test encrypts the file(s) using the 7z utility\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "62b03e18-f75c-4020-bec1-64d1a92f0cd8",
      "type": "execute-command",
      "data": {
        "command": "7z a -p #{file_password} -mhe=on #{encrypted_file_name} #{input_file_path}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "80a9e3ef-63ea-40f0-88a6-1a49c997ab26",
      "type": "execute-command",
      "data": {
        "command": "rm #{encrypted_file_name}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
