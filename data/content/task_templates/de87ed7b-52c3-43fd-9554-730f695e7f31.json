{
  "id": "de87ed7b-52c3-43fd-9554-730f695e7f31",
  "name": "Create Hidden User using IsHidden option",
  "description": "Add a hidden user on macOS using IsHidden optoin\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "1330fcb9-ff31-4452-aab1-077334a2b963",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -create /Users/#{user_name} IsHidden 1",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "2561bb38-61e4-4e45-b3ab-91db45a6d57f",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -delete /Users/#{user_name}",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "1330fcb9-ff31-4452-aab1-077334a2b963",
      "p": "on-success",
      "o": "2561bb38-61e4-4e45-b3ab-91db45a6d57f"
    },
    {
      "s": "1330fcb9-ff31-4452-aab1-077334a2b963",
      "p": "on-failure",
      "o": "2561bb38-61e4-4e45-b3ab-91db45a6d57f"
    }
  ],
  "tags": [
    "T1564",
    "T1564.002"
  ],
  "input_arguments": [
    {
      "name": "user_name",
      "type": "string",
      "description": "username to add",
      "value": "APT"
    }
  ]
}