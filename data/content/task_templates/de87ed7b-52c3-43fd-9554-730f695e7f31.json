{
  "id": "de87ed7b-52c3-43fd-9554-730f695e7f31",
  "name": "Create Hidden User using IsHidden option",
  "description": "Add a hidden user on macOS using IsHidden optoin\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "1ad442be-d04e-4bf8-bd2c-401469cd46b5",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -create /Users/#{user_name} IsHidden 1",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "b40d21e8-0e15-4dac-8f04-a08b3c96f7f6",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -delete /Users/#{user_name}",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "1ad442be-d04e-4bf8-bd2c-401469cd46b5",
      "p": "on-success",
      "o": "b40d21e8-0e15-4dac-8f04-a08b3c96f7f6"
    },
    {
      "s": "1ad442be-d04e-4bf8-bd2c-401469cd46b5",
      "p": "on-failure",
      "o": "b40d21e8-0e15-4dac-8f04-a08b3c96f7f6"
    }
  ],
  "tags": [
    "T1564",
    "T1564.002"
  ],
  "input_arguments": [
    {
      "name": "user_name",
      "type": "string",
      "description": "username to add",
      "value": "APT"
    }
  ]
}