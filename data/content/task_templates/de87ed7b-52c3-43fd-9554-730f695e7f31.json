{
  "id": "de87ed7b-52c3-43fd-9554-730f695e7f31",
  "name": "Create Hidden User using IsHidden option",
  "description": "Add a hidden user on macOS using IsHidden optoin\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "6c7625a0-abb7-4dc9-bd8d-9c8899257d66",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -create /Users/#{user_name} IsHidden 1\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "10d8a0d8-7d20-4eed-8d60-8726464a14fd",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -delete /Users/#{user_name}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "6c7625a0-abb7-4dc9-bd8d-9c8899257d66",
      "p": "on-success",
      "o": "10d8a0d8-7d20-4eed-8d60-8726464a14fd"
    },
    {
      "s": "6c7625a0-abb7-4dc9-bd8d-9c8899257d66",
      "p": "on-failure",
      "o": "10d8a0d8-7d20-4eed-8d60-8726464a14fd"
    }
  ],
  "tags": [
    "T1564.002",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "user_name",
      "type": "string",
      "description": "username to add",
      "value": "APT"
    }
  ]
}