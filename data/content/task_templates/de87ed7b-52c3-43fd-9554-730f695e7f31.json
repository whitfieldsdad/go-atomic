{
  "id": "de87ed7b-52c3-43fd-9554-730f695e7f31",
  "name": "Create Hidden User using IsHidden option",
  "description": "Add a hidden user on macOS using IsHidden optoin\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "155ef607-c91b-4663-9b85-a79de1b8c24f",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -create /Users/#{user_name} IsHidden 1\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "7bcee6a5-4009-4439-851d-2d09dd32b545",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -delete /Users/#{user_name}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "155ef607-c91b-4663-9b85-a79de1b8c24f",
      "p": "on-success",
      "o": "7bcee6a5-4009-4439-851d-2d09dd32b545"
    },
    {
      "s": "155ef607-c91b-4663-9b85-a79de1b8c24f",
      "p": "on-failure",
      "o": "7bcee6a5-4009-4439-851d-2d09dd32b545"
    }
  ],
  "tags": [
    "T1564.002",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
