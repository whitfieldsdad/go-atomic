{
  "id": "de87ed7b-52c3-43fd-9554-730f695e7f31",
  "name": "Create Hidden User using IsHidden option",
  "description": "Add a hidden user on macOS using IsHidden optoin\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "4cfc0417-e7ed-423f-b92c-2dee66d2b912",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -create /Users/#{user_name} IsHidden 1\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "4fd8a365-d21c-4d3c-b9b4-862caeb98380",
      "type": "execute-command",
      "data": {
        "command": "sudo dscl . -delete /Users/#{user_name}\n",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "4cfc0417-e7ed-423f-b92c-2dee66d2b912",
      "p": "on-success",
      "o": "4fd8a365-d21c-4d3c-b9b4-862caeb98380"
    },
    {
      "s": "4cfc0417-e7ed-423f-b92c-2dee66d2b912",
      "p": "on-failure",
      "o": "4fd8a365-d21c-4d3c-b9b4-862caeb98380"
    }
  ],
  "tags": [
    "T1564",
    "T1564.002"
  ],
  "input_arguments": [
    {
      "name": "user_name",
      "type": "string",
      "description": "username to add",
      "value": "APT"
    }
  ]
}