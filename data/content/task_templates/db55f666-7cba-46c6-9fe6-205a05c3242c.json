{
  "id": "db55f666-7cba-46c6-9fe6-205a05c3242c",
  "name": "Set a SetGID flag on file",
  "description": "This test sets the SetGID flag on a file in Linux and macOS.\n",
  "platforms": [
    "darwin",
    "linux"
  ],
  "steps": [
    {
      "id": "b2f4418a-a3bd-49b6-869a-5a0d611f57bb",
      "type": "execute-command",
      "data": {
        "command": "sudo touch #{file_to_setuid}\nsudo chown root #{file_to_setuid}\nsudo chmod g+xs #{file_to_setuid}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "95fc17be-ab65-4ea9-84cd-d36ea8fee0fc",
      "type": "execute-command",
      "data": {
        "command": "sudo rm #{file_to_setuid}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "b2f4418a-a3bd-49b6-869a-5a0d611f57bb",
      "p": "on-success",
      "o": "95fc17be-ab65-4ea9-84cd-d36ea8fee0fc"
    },
    {
      "s": "b2f4418a-a3bd-49b6-869a-5a0d611f57bb",
      "p": "on-failure",
      "o": "95fc17be-ab65-4ea9-84cd-d36ea8fee0fc"
    }
  ],
  "tags": [
    "T1548.001",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "file_to_setuid",
      "type": "path",
      "description": "Path of file to set SetGID flag",
      "value": "/tmp/evilBinary"
    }
  ]
}