{
  "id": "cedaf7e7-28ee-42ab-ba13-456abd35d1bd",
  "name": "Auditing Configuration Changes on FreeBSD Host",
  "description": "Emulates modification of auditd configuration files\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "e8bb1765-b69d-4c8d-9acc-9815bce7415a",
      "type": "execute-command",
      "data": {
        "command": "echo '#art_test_1562_006_1' \u003e\u003e /etc/security/#{auditd_config_file_name}\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "10474455-4e02-4071-aa77-1c91c039c814",
      "type": "execute-command",
      "data": {
        "command": "sed -i \"\" '/#art_test_1562_006_1/d' /etc/security/#{auditd_config_file_name}\n",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "e8bb1765-b69d-4c8d-9acc-9815bce7415a",
