{
  "id": "53e6735a-4727-44cc-b35b-237682a151ad",
  "name": "Encrypt files using 7z (FreeBSD/Linux)",
  "description": "Uses 7z to encrypt a file\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "f672e560-4b8b-45ff-8a4a-9607f96242ff",
      "type": "execute-command",
      "data": {
        "command": "$which_7z a -p#{pwd_for_encrypted_file} #{encrypted_file_path} #{input_file_path}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "17b871d0-fdcd-41ee-852c-eb4c26cc0719",
      "type": "execute-command",
      "data": {
        "command": "$which_7z e #{encrypted_file_path}\nrm #{encrypted_file_path}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "ada31352-dbe5-4bd0-91e1-271ac8c2a9ae",
      "name": "Check dependency 1/1",
      "description": "Finds where 7z is located\n",
      "type": "execute-command",
      "data": {
        "command": "which_7z=`which 7z`\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "d7b65dd0-8681-4f18-89b6-2a9e51119952",
      "name": "Resolve dependency 1/1",
      "description": "Finds where 7z is located\n",
      "type": "execute-command",
      "data": {
        "command": "(which pkg \u0026\u0026 pkg install -y 7-zip)\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "08c1e52a-2da9-4458-88f5-f68ce037e35b",
      "name": "Re-check dependency 1/1",
      "description": "Finds where 7z is located\n",
      "type": "execute-command",
      "data": {
        "command": "which_7z=`which 7z`\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
