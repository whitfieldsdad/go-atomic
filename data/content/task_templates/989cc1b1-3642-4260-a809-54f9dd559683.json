{
  "id": "989cc1b1-3642-4260-a809-54f9dd559683",
  "name": "rm -rf",
  "description": "Delete system and audit logs\n",
  "platforms": [
    "darwin",
    "linux"
  ],
  "steps": [
    {
      "id": "f16240fd-a7e0-4743-882e-9e560aa4f6d5",
      "type": "execute-command",
      "data": {
        "command": "sudo rm -rf #{syslog_path}\nif [ -d /var/audit ] ; then sudo rm -rf #{macos_audit_path} ; fi\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "b0f60056-0e63-4829-81b0-91295f3efcc2",
      "name": "Check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "if [ -d /var/audit ] ; then stat #{macos_audit_path} ; fi \u0026\u0026 stat #{syslog_path}\n",
        "command_type": ""
      },
      "elevation_required": true
    },
    {
      "id": "33167be3-64a9-46e7-b7ea-02e068019a8f",
      "name": "Resolve dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "touch #{syslog_path}\nif [ -d /var/audit ] ; then touch #{macos_audit_path} ; fi\n",
        "command_type": ""
      },
      "elevation_required": true
    },
    {
      "id": "dfebe32f-09fd-4f10-a078-156dc958de7d",
      "name": "Re-check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "if [ -d /var/audit ] ; then stat #{macos_audit_path} ; fi \u0026\u0026 stat #{syslog_path}\n",
        "command_type": ""
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "b0f60056-0e63-4829-81b0-91295f3efcc2",
      "p": "on-success",
      "o": "f16240fd-a7e0-4743-882e-9e560aa4f6d5"
    },
    {
      "s": "b0f60056-0e63-4829-81b0-91295f3efcc2",
      "p": "on-failure",
      "o": "33167be3-64a9-46e7-b7ea-02e068019a8f"
    },
    {
      "s": "33167be3-64a9-46e7-b7ea-02e068019a8f",
      "p": "on-success",
      "o": "dfebe32f-09fd-4f10-a078-156dc958de7d"
    },
    {
      "s": "dfebe32f-09fd-4f10-a078-156dc958de7d",
      "p": "on-failure",
      "o": "f16240fd-a7e0-4743-882e-9e560aa4f6d5"
    }
  ],
  "tags": [
    "T1070",
    "T1070.002"
  ],
  "input_arguments": [
    {
      "name": "macos_audit_path",
      "type": "string",
      "description": "path of audit file to delete",
      "value": "/var/audit/20220725213300.202208110700021"
    },
    {
      "name": "syslog_path",
      "type": "string",
      "description": "path of syslog file to delete. On macos it's /var/log/system.log*, on linux, it's /var/log/syslog*. Also note for File events, that on macos, /var/ is a link to /private/var/.",
      "value": "/var/log/system.log"
    }
  ]
