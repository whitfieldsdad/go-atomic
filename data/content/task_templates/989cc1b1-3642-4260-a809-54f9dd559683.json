{
  "id": "989cc1b1-3642-4260-a809-54f9dd559683",
  "name": "rm -rf",
  "description": "Delete system and audit logs\n",
  "platforms": [
    "darwin",
    "linux"
  ],
  "steps": [
    {
      "id": "39673517-effb-41a1-8c7a-5bc952b2a026",
      "type": "execute-command",
      "data": {
        "command": "sudo rm -rf #{syslog_path}\nif [ -d /var/audit ] ; then sudo rm -rf #{macos_audit_path} ; fi\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "b4e2fe56-d8b4-42fa-822c-fa7fddb378a9",
      "name": "Check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "if [ -d /var/audit ] ; then stat #{macos_audit_path} ; fi \u0026\u0026 stat #{syslog_path}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "44bd881f-3c0f-4f47-8473-aa614a121d62",
      "name": "Resolve dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "touch #{syslog_path}\nif [ -d /var/audit ] ; then touch #{macos_audit_path} ; fi\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "de7b322b-fc29-41e0-8f35-781a65bd35db",
      "name": "Re-check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "if [ -d /var/audit ] ; then stat #{macos_audit_path} ; fi \u0026\u0026 stat #{syslog_path}\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
