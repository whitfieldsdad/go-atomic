{
  "id": "ca50dd85-81ff-48ca-92e1-61f119cb1dcf",
  "name": "Delete system journal logs via rm and journalctl utilities",
  "description": "The first sub-test deletes the journal files using rm utility in the \"/var/log/journal/\" directory and the second sub-test clears the journal by modifiying time period of logs that should be retained to zero.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "38ab2590-757d-4ba4-b355-1b22d9fc2d3e",
      "type": "execute-command",
      "data": {
        "command": "sudo rm #{journal_folder}/* #physically deletes the journal files, and not just their content\nsudo journalctl --vacuum-time=0 #clears the journal while still keeping the journal files in place\n",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "e2315a5d-33b9-464c-91c3-0f4e323aeb88",
      "name": "Check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{journal_folder}\n",
        "command_type": ""
      },
      "elevation_required": true
    },
    {
      "id": "8ce63c20-d4c3-446f-95fe-157ce200e11e",
      "name": "Resolve dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "mkdir -p #{journal_folder} \u0026\u0026 touch #{journal_folder}/T1070_002.journal\n",
        "command_type": ""
      },
      "elevation_required": true
    },
    {
      "id": "ad4dc94f-1750-4fb6-87ca-76b9382e0804",
      "name": "Re-check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{journal_folder}\n",
        "command_type": ""
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "e2315a5d-33b9-464c-91c3-0f4e323aeb88",
      "p": "on-success",
      "o": "38ab2590-757d-4ba4-b355-1b22d9fc2d3e"
    },
    {
      "s": "e2315a5d-33b9-464c-91c3-0f4e323aeb88",
      "p": "on-failure",
      "o": "8ce63c20-d4c3-446f-95fe-157ce200e11e"
    },
    {
      "s": "8ce63c20-d4c3-446f-95fe-157ce200e11e",
      "p": "on-success",
      "o": "ad4dc94f-1750-4fb6-87ca-76b9382e0804"
    },
    {
      "s": "ad4dc94f-1750-4fb6-87ca-76b9382e0804",
      "p": "on-failure",
      "o": "38ab2590-757d-4ba4-b355-1b22d9fc2d3e"
    }
  ],
  "tags": [
    "T1070",
    "T1070.002"
  ],
  "input_arguments": [
    {
      "name": "journal_folder",
      "type": "string",
      "description": "path to journal logs",
      "value": "/var/log/journal"
    }
  ]
}