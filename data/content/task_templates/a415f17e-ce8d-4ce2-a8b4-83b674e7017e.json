{
  "id": "a415f17e-ce8d-4ce2-a8b4-83b674e7017e",
  "name": "Delete an entire folder - FreeBSD/Linux/macOS",
  "description": "Recursively delete the temporary directory and all files contained within it\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "b893adfc-f037-4221-ba71-74c17b7026ce",
      "type": "execute-command",
      "data": {
        "command": "rm -rf #{folder_to_delete}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "337b5c26-4ea0-4736-9555-5673c17fcfd2",
      "name": "Check dependency 1/1",
      "description": "The folder must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "test -e #{folder_to_delete} \u0026\u0026 exit 0 || exit 1",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "6cefe275-1bae-4c6b-a7a5-9663f8b4508d",
      "name": "Resolve dependency 1/1",
      "description": "The folder must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "mkdir -p #{folder_to_delete}",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "443c199c-9fff-4381-9ca4-bcd89465545f",
      "name": "Re-check dependency 1/1",
      "description": "The folder must exist in order to be deleted\n",
      "type": "execute-command",
      "data": {
        "command": "test -e #{folder_to_delete} \u0026\u0026 exit 0 || exit 1",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "337b5c26-4ea0-4736-9555-5673c17fcfd2",
      "p": "on-success",
      "o": "b893adfc-f037-4221-ba71-74c17b7026ce"
    },
    {
      "s": "337b5c26-4ea0-4736-9555-5673c17fcfd2",
      "p": "on-failure",
      "o": "6cefe275-1bae-4c6b-a7a5-9663f8b4508d"
    },
    {
      "s": "6cefe275-1bae-4c6b-a7a5-9663f8b4508d",
      "p": "on-success",
      "o": "443c199c-9fff-4381-9ca4-bcd89465545f"
    },
    {
      "s": "443c199c-9fff-4381-9ca4-bcd89465545f",
      "p": "on-failure",
      "o": "b893adfc-f037-4221-ba71-74c17b7026ce"
    }
  ],
  "tags": [
