{
  "id": "913c0e4e-4b37-4b78-ad0b-90e7b25010f6",
  "name": "Clear Windows Audit Policy Config",
  "description": "Clear the Windows audit policy using auditpol utility. This action would stop certain audit events from being recorded in the security log.",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "cac44d5c-d886-48ba-ae21-c96423824d43",
      "type": "execute-command",
      "data": {
        "command": "auditpol /clear /y\nauditpol /remove /allusers\n",
        "command_type": "command_prompt"
      },
      "elevation_required": true
    },
    {
      "id": "dbb49536-5649-43de-94a7-e37514f28c11",
      "type": "execute-command",
      "data": {
        "command": "auditpol /set /category:\"Account Logon\" /success:enable /failure:enable\nauditpol /set /category:\"Detailed Tracking\" /success:enable\nauditpol /set /category:\"Logon/Logoff\" /success:enable /failure:enable\n",
        "command_type": "command_prompt"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "cac44d5c-d886-48ba-ae21-c96423824d43",
      "p": "on-success",
      "o": "dbb49536-5649-43de-94a7-e37514f28c11"
    },
    {
      "s": "cac44d5c-d886-48ba-ae21-c96423824d43",
      "p": "on-failure",
      "o": "dbb49536-5649-43de-94a7-e37514f28c11"
    }
  ],
  "tags": [
    "T1562",
    "T1562.002"
  ]
}