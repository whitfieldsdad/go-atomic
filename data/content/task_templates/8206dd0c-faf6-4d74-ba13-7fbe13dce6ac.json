{
  "id": "8206dd0c-faf6-4d74-ba13-7fbe13dce6ac",
  "name": "X Windows Capture",
  "description": "Use xwd command to collect a full desktop screenshot and review file with xwud\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "5b45d580-b4f8-4586-b9eb-4dac8495c5a1",
      "type": "execute-command",
      "data": {
        "command": "xwd -root -out #{output_file}\nxwud -in #{output_file}",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "d1fa65e1-f11d-4a0c-b6ae-503e5acebeda",
      "type": "execute-command",
      "data": {
        "command": "rm #{output_file}",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "2bf81c3c-c675-460b-a7a7-c3560fc0fdfd",
      "name": "Check dependency 1/1",
      "description": "Package with XWD and XWUD must exist on device\n",
      "type": "execute-command",
      "data": {
        "command": "if #{package_checker} \u003e /dev/null; then exit 0; else exit 1; fi",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "65d9ab76-e57e-4c03-a6f3-3797f333a534",
      "name": "Resolve dependency 1/1",
      "description": "Package with XWD and XWUD must exist on device\n",
      "type": "execute-command",
      "data": {
        "command": "sudo #{package_installer}",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "36cf75ea-dbe6-43d1-8161-3f9a1802d1c5",
      "name": "Re-check dependency 1/1",
      "description": "Package with XWD and XWUD must exist on device\n",
      "type": "execute-command",
      "data": {
        "command": "if #{package_checker} \u003e /dev/null; then exit 0; else exit 1; fi",
        "command_type": "bash"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "5b45d580-b4f8-4586-b9eb-4dac8495c5a1",
      "p": "on-success",
      "o": "d1fa65e1-f11d-4a0c-b6ae-503e5acebeda"
    },
    {
      "s": "5b45d580-b4f8-4586-b9eb-4dac8495c5a1",
      "p": "on-failure",
      "o": "d1fa65e1-f11d-4a0c-b6ae-503e5acebeda"
    },
    {
      "s": "2bf81c3c-c675-460b-a7a7-c3560fc0fdfd",
      "p": "on-success",
      "o": "5b45d580-b4f8-4586-b9eb-4dac8495c5a1"
    },
    {
      "s": "2bf81c3c-c675-460b-a7a7-c3560fc0fdfd",
      "p": "on-failure",
      "o": "65d9ab76-e57e-4c03-a6f3-3797f333a534"
    },
    {
      "s": "65d9ab76-e57e-4c03-a6f3-3797f333a534",
      "p": "on-success",
      "o": "36cf75ea-dbe6-43d1-8161-3f9a1802d1c5"
    },
    {
      "s": "36cf75ea-dbe6-43d1-8161-3f9a1802d1c5",
      "p": "on-failure",
      "o": "5b45d580-b4f8-4586-b9eb-4dac8495c5a1"
    }
  ],
  "tags": [
    "T1113"
  ],
  "input_arguments": [
    {
      "name": "package_checker",
      "type": "string",
      "description": "Package checking command for linux. Debian system command- dpkg -s x11-apps",
      "value": "rpm -q xorg-x11-apps"
    },
    {
      "name": "package_installer",
      "type": "string",
      "description": "Package installer command for linux. Debian system command- apt-get install x11-apps",
      "value": "yum install -y xorg-x11-apps"
    },
    {
      "name": "output_file",
      "type": "path",
      "description": "Output file path",
      "value": "/tmp/T1113_desktop.xwd"
    }
  ]
}