{
  "id": "8206dd0c-faf6-4d74-ba13-7fbe13dce6ac",
  "name": "X Windows Capture",
  "description": "Use xwd command to collect a full desktop screenshot and review file with xwud\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "1d554f95-6ef2-42d6-8749-8b904344b757",
      "type": "execute-command",
      "data": {
        "command": "xwd -root -out #{output_file}\nxwud -in #{output_file}\n",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "d9e6c3b9-691b-4980-9e49-689c83725fef",
      "type": "execute-command",
      "data": {
        "command": "rm #{output_file}\n",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "01a466d1-b4be-4eb8-a79c-b0da1390f0c5",
      "name": "Check dependency 1/1",
      "description": "Package with XWD and XWUD must exist on device\n",
      "type": "execute-command",
      "data": {
        "command": "if #{package_checker} \u003e /dev/null; then exit 0; else exit 1; fi\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "c9aeaf93-daf3-4fea-9ebb-472105c3a067",
      "name": "Resolve dependency 1/1",
      "description": "Package with XWD and XWUD must exist on device\n",
      "type": "execute-command",
      "data": {
        "command": "sudo #{package_installer} \n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "b039405c-146d-4d2b-97f2-c97a43f86849",
      "name": "Re-check dependency 1/1",
      "description": "Package with XWD and XWUD must exist on device\n",
      "type": "execute-command",
      "data": {
        "command": "if #{package_checker} \u003e /dev/null; then exit 0; else exit 1; fi\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "1d554f95-6ef2-42d6-8749-8b904344b757",
      "p": "on-success",
      "o": "d9e6c3b9-691b-4980-9e49-689c83725fef"
    },
    {
      "s": "1d554f95-6ef2-42d6-8749-8b904344b757",
      "p": "on-failure",
      "o": "d9e6c3b9-691b-4980-9e49-689c83725fef"
    },
    {
      "s": "01a466d1-b4be-4eb8-a79c-b0da1390f0c5",
      "p": "on-success",
      "o": "1d554f95-6ef2-42d6-8749-8b904344b757"
    },
    {
      "s": "01a466d1-b4be-4eb8-a79c-b0da1390f0c5",
      "p": "on-failure",
      "o": "c9aeaf93-daf3-4fea-9ebb-472105c3a067"
    },
    {
      "s": "c9aeaf93-daf3-4fea-9ebb-472105c3a067",
      "p": "on-success",
      "o": "b039405c-146d-4d2b-97f2-c97a43f86849"
