{
  "id": "8206dd0c-faf6-4d74-ba13-7fbe13dce6ac",
  "name": "X Windows Capture",
  "description": "Use xwd command to collect a full desktop screenshot and review file with xwud\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "0cca96b1-f4b8-48b8-9c88-483fbc166fb5",
      "type": "execute-command",
      "data": {
        "command": "xwd -root -out #{output_file}\nxwud -in #{output_file}\n",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "fc6e6d7e-332f-4e18-9264-9cc1ac515924",
      "type": "execute-command",
      "data": {
        "command": "rm #{output_file}\n",
        "command_type": "bash"
      },
      "elevation_required": false
    },
    {
      "id": "31d6d7b7-2e0e-4be1-a551-0cf4cc0617a5",
      "name": "Check dependency 1/1",
      "description": "Package with XWD and XWUD must exist on device\n",
      "type": "execute-command",
      "data": {
        "command": "if #{package_checker} \u003e /dev/null; then exit 0; else exit 1; fi\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "8bc9c9e7-a7a5-4d51-ab93-489a0a059ffd",
      "name": "Resolve dependency 1/1",
      "description": "Package with XWD and XWUD must exist on device\n",
      "type": "execute-command",
      "data": {
        "command": "sudo #{package_installer} \n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "0f834972-f2d4-4137-a20c-2932b2150452",
      "name": "Re-check dependency 1/1",
      "description": "Package with XWD and XWUD must exist on device\n",
      "type": "execute-command",
      "data": {
        "command": "if #{package_checker} \u003e /dev/null; then exit 0; else exit 1; fi\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "0cca96b1-f4b8-48b8-9c88-483fbc166fb5",
      "p": "on-success",
      "o": "fc6e6d7e-332f-4e18-9264-9cc1ac515924"
    },
    {
      "s": "0cca96b1-f4b8-48b8-9c88-483fbc166fb5",
      "p": "on-failure",
      "o": "fc6e6d7e-332f-4e18-9264-9cc1ac515924"
    },
    {
      "s": "31d6d7b7-2e0e-4be1-a551-0cf4cc0617a5",
      "p": "on-success",
      "o": "0cca96b1-f4b8-48b8-9c88-483fbc166fb5"
    },
    {
      "s": "31d6d7b7-2e0e-4be1-a551-0cf4cc0617a5",
      "p": "on-failure",
      "o": "8bc9c9e7-a7a5-4d51-ab93-489a0a059ffd"
    },
    {
      "s": "8bc9c9e7-a7a5-4d51-ab93-489a0a059ffd",
      "p": "on-success",
      "o": "0f834972-f2d4-4137-a20c-2932b2150452"
    },
