{
  "id": "6290f8a8-8ee9-4661-b9cf-390031bf6973",
  "name": "Truncate system log files via truncate utility",
  "description": "This test truncates the system log files using the truncate utility with (-s 0 or --size=0) parameter which sets file size to zero, thus emptying the file content\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "8b45b54f-9c97-40e2-aae2-e0af64de19fe",
      "type": "execute-command",
      "data": {
        "command": "sudo truncate -s 0 #{system_log_path} #size parameter shorthand\nsudo truncate --size=0 #{system_log_path} #size parameter \n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "508049c3-6767-4a5d-abb0-3ee9ecca6964",
      "name": "Check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{system_log_path}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "dc7004d2-587d-43e3-b385-dcc48299f8ab",
      "name": "Resolve dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "touch #{system_log_path}\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "df9e2f40-5f5f-4dd6-98f6-77ceb54888b1",
      "name": "Re-check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat #{system_log_path}\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "508049c3-6767-4a5d-abb0-3ee9ecca6964",
      "p": "on-success",
      "o": "8b45b54f-9c97-40e2-aae2-e0af64de19fe"
    },
    {
      "s": "508049c3-6767-4a5d-abb0-3ee9ecca6964",
      "p": "on-failure",
      "o": "dc7004d2-587d-43e3-b385-dcc48299f8ab"
    },
    {
      "s": "dc7004d2-587d-43e3-b385-dcc48299f8ab",
      "p": "on-success",
      "o": "df9e2f40-5f5f-4dd6-98f6-77ceb54888b1"
    },
    {
      "s": "df9e2f40-5f5f-4dd6-98f6-77ceb54888b1",
      "p": "on-failure",
      "o": "8b45b54f-9c97-40e2-aae2-e0af64de19fe"
    }
  ],
  "tags": [
    "T1070.002",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "system_log_path",
      "type": "string",
      "description": "path of system log to delete.",
      "value": "/var/log/system.log"
    }
  ]
}