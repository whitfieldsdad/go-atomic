{
  "id": "864bb0b2-6bb5-489a-b43b-a77b3a16d68a",
  "name": "Copy Private SSH Keys with rsync",
  "description": "Copy private SSH keys on a Linux or macOS system to a staging folder using the `rsync` command.\n",
  "platforms": [
    "darwin",
    "linux"
  ],
  "steps": [
    {
      "id": "22230125-060c-4509-8a17-abc7720639f3",
      "type": "execute-command",
      "data": {
        "command": "mkdir #{output_folder}\nfind #{search_path} -name id_rsa 2\u003e/dev/null -exec rsync -R {} #{output_folder} \\;\nexit 0\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "7be4f5d9-1e44-466b-a868-b9237695d72d",
      "type": "execute-command",
      "data": {
        "command": "rm -rf #{output_folder}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "22230125-060c-4509-8a17-abc7720639f3",
      "p": "on-success",
      "o": "7be4f5d9-1e44-466b-a868-b9237695d72d"
    },
    {
      "s": "22230125-060c-4509-8a17-abc7720639f3",
      "p": "on-failure",
      "o": "7be4f5d9-1e44-466b-a868-b9237695d72d"
    }
  ],
  "tags": [
    "T1552.004",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "search_path",
      "type": "path",
      "description": "Path where to start searching from.",
      "value": "/"
    },
    {
      "name": "output_folder",
      "type": "path",
      "description": "Output folder containing copies of SSH private key files",
      "value": "/tmp/art-staging"
    }
  ]
}