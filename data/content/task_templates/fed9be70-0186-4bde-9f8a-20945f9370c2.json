{
  "id": "fed9be70-0186-4bde-9f8a-20945f9370c2",
  "name": "View sudoers access",
  "description": "(requires root)\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "e0347201-ca52-4d9c-a1cb-4f2025237b14",
      "type": "execute-command",
      "data": {
        "command": "if [ -f /etc/sudoers ]; then sudo cat /etc/sudoers \u003e #{output_file}; fi;\nif [ -f /usr/local/etc/sudoers ]; then sudo cat /usr/local/etc/sudoers \u003e #{output_file}; fi;\ncat #{output_file}",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "95c28fb7-1204-45c3-a461-a101c6603053",
      "type": "execute-command",
      "data": {
        "command": "rm -f #{output_file}",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "e0347201-ca52-4d9c-a1cb-4f2025237b14",
      "p": "on-success",
      "o": "95c28fb7-1204-45c3-a461-a101c6603053"
    },
    {
      "s": "e0347201-ca52-4d9c-a1cb-4f2025237b14",
      "p": "on-failure",
      "o": "95c28fb7-1204-45c3-a461-a101c6603053"
    }
  ],
  "tags": [
    "T1087",
    "T1087.001"
  ],
  "input_arguments": [
    {
      "name": "output_file",
      "type": "path",
      "description": "Path where captured results will be placed",
      "value": "/tmp/T1087.001.txt"
    }
  ]
