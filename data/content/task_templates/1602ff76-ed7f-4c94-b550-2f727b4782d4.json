{
  "id": "1602ff76-ed7f-4c94-b550-2f727b4782d4",
  "name": "Overwrite Linux Mail Spool",
  "description": "This test overwrites the Linux mail spool of a specified user. This technique was used by threat actor Rocke during the exploitation of Linux web servers.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "b8584c2e-f5a2-460a-8b09-7c58c3f5fba9",
      "type": "execute-command",
      "data": {
        "command": "echo 0\u003e /var/spool/mail/#{username}\n",
        "command_type": "bash"
      },
      "elevation_required": true
    },
    {
      "id": "c2ba503d-fdba-4e45-9efb-a203cba6e400",
      "name": "Check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat /var/spool/mail/#{username}\n",
        "command_type": ""
      },
      "elevation_required": true
    },
    {
      "id": "d36d3558-581a-4a03-a54c-a13ef5672a8d",
      "name": "Resolve dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "touch /var/spool/mail/#{username}\n",
        "command_type": ""
      },
      "elevation_required": true
    },
    {
      "id": "152f03a4-6b23-4940-a746-af644eb228f6",
      "name": "Re-check dependency 1/1",
      "description": "target files must exist\n",
      "type": "execute-command",
      "data": {
        "command": "stat /var/spool/mail/#{username}\n",
        "command_type": ""
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "c2ba503d-fdba-4e45-9efb-a203cba6e400",
      "p": "on-success",
      "o": "b8584c2e-f5a2-460a-8b09-7c58c3f5fba9"
    },
    {
      "s": "c2ba503d-fdba-4e45-9efb-a203cba6e400",
      "p": "on-failure",
      "o": "d36d3558-581a-4a03-a54c-a13ef5672a8d"
    },
    {
      "s": "d36d3558-581a-4a03-a54c-a13ef5672a8d",
      "p": "on-success",
      "o": "152f03a4-6b23-4940-a746-af644eb228f6"
    },
    {
      "s": "152f03a4-6b23-4940-a746-af644eb228f6",
      "p": "on-failure",
      "o": "b8584c2e-f5a2-460a-8b09-7c58c3f5fba9"
    }
  ],
  "tags": [
