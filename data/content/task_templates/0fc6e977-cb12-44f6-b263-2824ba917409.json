{
  "id": "0fc6e977-cb12-44f6-b263-2824ba917409",
  "name": "rsync remote file copy (push)",
  "description": "Utilize rsync to perform a remote file copy (push)\n",
  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "5c3b37d3-785c-4125-9483-a1c6157baea2",
      "type": "execute-command",
      "data": {
        "command": "rsync -r #{local_path} #{username}@#{remote_host}:#{remote_path}",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "ae9fb782-7e99-42d0-9674-0ff5bce15b46",
      "name": "Check dependency 1/1",
      "description": "rsync must be installed on the machine \n",
      "type": "execute-command",
      "data": {
        "command": "if [ -x \"$(command -v rsync)\" ]; then exit 0; else exit 1; fi",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "d3bcc693-7e4b-45ae-af2b-5a3085240e79",
      "name": "Resolve dependency 1/1",
      "description": "rsync must be installed on the machine \n",
      "type": "execute-command",
      "data": {
        "command": "(pkg install -y rsync)||(sudo apt-get -y install rsync)",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "9372084c-205b-41a1-852f-d686a2fc29a4",
      "name": "Re-check dependency 1/1",
      "description": "rsync must be installed on the machine \n",
      "type": "execute-command",
      "data": {
        "command": "if [ -x \"$(command -v rsync)\" ]; then exit 0; else exit 1; fi",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "ae9fb782-7e99-42d0-9674-0ff5bce15b46",
      "p": "on-success",
      "o": "5c3b37d3-785c-4125-9483-a1c6157baea2"
    },
    {
      "s": "ae9fb782-7e99-42d0-9674-0ff5bce15b46",
      "p": "on-failure",
      "o": "d3bcc693-7e4b-45ae-af2b-5a3085240e79"
    },
    {
      "s": "d3bcc693-7e4b-45ae-af2b-5a3085240e79",
      "p": "on-success",
      "o": "9372084c-205b-41a1-852f-d686a2fc29a4"
    },
    {
      "s": "9372084c-205b-41a1-852f-d686a2fc29a4",
      "p": "on-failure",
      "o": "5c3b37d3-785c-4125-9483-a1c6157baea2"
    }
  ],
  "tags": [
    "T1105"
  ],
  "input_arguments": [
    {
      "name": "local_path",
      "type": "path",
      "description": "Path of folder to copy",
      "value": "/tmp/adversary-rsync/"
    },
    {
      "name": "username",
      "type": "string",
      "description": "User account to authenticate on remote host",
      "value": "victim"
    },
    {
      "name": "remote_path",
      "type": "path",
      "description": "Remote path to receive rsync",
      "value": "/tmp/victim-files"
    },
    {
      "name": "remote_host",
      "type": "string",
      "description": "Remote host to copy toward",
      "value": "victim-host"
    }
  ]
