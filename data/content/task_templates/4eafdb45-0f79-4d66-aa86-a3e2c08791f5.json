  "platforms": [
    "linux",
    "darwin"
  ],
  "steps": [
    {
      "id": "ffa17055-e7f8-4064-a7d9-e7fbfecefed6",
      "type": "execute-command",
      "data": {
        "command": "export HISTCONTROL=ignoreboth\n#{evil_command}\n",
