{
  "id": "a547d1ba-1d7a-4cc5-a9cb-8d65e8809636",
  "name": "Trap SIGINT",
  "description": "Launch bash shell with command arg to create TRAP on SIGINT (CTRL+C), then send SIGINT signal.\nThe trap executes script that writes to /tmp/art-fish.txt\n",
  "platforms": [
    "darwin",
    "linux"
  ],
  "steps": [
    {
      "id": "40dbc1cc-600d-4f4f-9ae0-84383e3a7935",
      "type": "execute-command",
      "data": {
        "command": "bash -c 'trap \"nohup sh $PathToAtomicsFolder/T1546.005/src/echo-art-fish.sh\" SIGINT \u0026\u0026 kill -SIGINT $$'\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "854f1f41-fd37-4a48-8bef-a1c704386b95",
      "type": "execute-command",
      "data": {
        "command": "rm -f /tmp/art-fish.txt\n",
        "command_type": "sh"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "40dbc1cc-600d-4f4f-9ae0-84383e3a7935",
