{
  "id": "c4ae0701-88d3-4cd8-8bce-4801ed9f97e4",
  "name": "Edit UFW firewall sysctl.conf file",
  "description": "Edit the Uncomplicated Firewall (UFW) configuration file for setting network \nvariables /etc/ufw/sysctl.conf.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "f62be34b-5add-48a4-a4db-e49df4ae10cd",
      "type": "execute-command",
      "data": {
        "command": "echo \"# THIS IS A COMMENT\" \u003e\u003e /etc/ufw/sysctl.conf\ngrep \"# THIS IS A COMMENT\" /etc/ufw/sysctl.conf\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "2fdde7e7-edf5-4548-add2-f6908baa589f",
      "type": "execute-command",
      "data": {
        "command": "sed -i 's/# THIS IS A COMMENT//g' /etc/ufw/sysctl.conf\ncat /etc/ufw/sysctl.conf\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "ff46fa3f-a0ee-4ec8-b11e-1e698678c23c",
      "name": "Check dependency 1/1",
      "description": "Check if /etc/ufw/sysctl.conf exists.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -f \"/etc/ufw/sysctl.conf\" ]; then echo -e \"\\n***** ufw NOT installed *****\\n\"; exit 1; fi\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
