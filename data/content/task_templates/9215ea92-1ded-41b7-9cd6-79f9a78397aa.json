  ],
  "input_arguments": [
    {
      "name": "bat_path",
      "type": "string",
      "description": "Path to malicious .bat file",
      "value": "$(\"$env:temp\\art1204.bat\")"
    },
    {
      "name": "ms_product",
      "type": "string",
      "description": "Maldoc application Word or Excel",
      "value": "Word"
