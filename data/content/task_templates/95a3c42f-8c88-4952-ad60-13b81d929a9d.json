{
  "id": "95a3c42f-8c88-4952-ad60-13b81d929a9d",
  "name": "Winlogon HKLM Shell Key Persistence - PowerShell",
  "description": "PowerShell code to set Winlogon shell key to execute a binary at logon along with explorer.exe.\n\nUpon successful execution, PowerShell will modify a registry value to execute cmd.exe upon logon/logoff.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "02752ec4-c44e-4c73-8e14-d3e5a35a8245",
      "type": "execute-command",
      "data": {
        "command": "Set-ItemProperty \"HKLM:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Winlogon\\\" \"Shell\" \"explorer.exe, #{binary_to_execute}\" -Force\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "c6fef618-fda1-465d-8638-f09279cc2a33",
      "type": "execute-command",
      "data": {
        "command": "Remove-ItemProperty -Path \"HKLM:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Winlogon\\\" -Name \"Shell\" -Force -ErrorAction Ignore\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "02752ec4-c44e-4c73-8e14-d3e5a35a8245",
      "p": "on-success",
      "o": "c6fef618-fda1-465d-8638-f09279cc2a33"
    },
    {
      "s": "02752ec4-c44e-4c73-8e14-d3e5a35a8245",
      "p": "on-failure",
      "o": "c6fef618-fda1-465d-8638-f09279cc2a33"
    }
  ],
  "tags": [
    "T1547.004",
    "atomic-red-team"
  ],
  "input_arguments": [
    {
      "name": "binary_to_execute",
      "type": "path",
      "description": "Path of binary to execute",
      "value": "C:\\Windows\\System32\\cmd.exe"
    }
  ]
}