{
  "id": "e3ad8e83-3089-49ff-817f-e52f8c948090",
  "name": "Enabling Remote Desktop Protocol via Remote Registry",
  "description": "Enabling RDP through remote registry.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "accca1e0-98de-4bae-8b21-8840ea6c3c63",
      "type": "execute-command",
      "data": {
        "command": "reg add \"hklm\\SYSTEM\\CurrentControlSet\\Control\\Terminal Server\\Winstations\\RDP-Tcp\" /v SecurityLayer /t REG_DWORD /d 0 /f\n",
        "command_type": "command_prompt"
      },
      "elevation_required": true
    },
    {
      "id": "64629dac-4c40-44b3-a223-5e8f891833e2",
      "type": "execute-command",
      "data": {
        "command": "reg add \"hklm\\SYSTEM\\CurrentControlSet\\Control\\Terminal Server\\Winstations\\RDP-Tcp\" /v SecurityLayer /t REG_DWORD /d 2 /f\n",
        "command_type": "command_prompt"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "accca1e0-98de-4bae-8b21-8840ea6c3c63",
