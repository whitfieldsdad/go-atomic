{
  "id": "d3812c4e-30ee-466a-a0aa-07e355b561d6",
  "name": "Delete User via sysadminctl utility",
  "description": "This test deletes the user account using the sysadminctl utility.\n",
  "platforms": [
    "darwin"
  ],
  "steps": [
    {
      "id": "9b6f2cdf-1d36-4a5b-ab3b-ff31fa76c634",
      "type": "execute-command",
      "data": {
        "command": "sysadminctl -deleteUser #{user_account} #enter admin password",
        "command_type": "sh"
      },
      "elevation_required": true
    },
    {
      "id": "76c2af13-7178-42b0-b8b9-f13182836d42",
      "type": "execute-command",
      "data": {
        "command": "sysadminctl -addUser #{user_account} -fullName \"#{user_name}\" -password #{user_password}",
        "command_type": "sh"
      },
      "elevation_required": true
    }
  ],
  "flows": [
    {
      "s": "9b6f2cdf-1d36-4a5b-ab3b-ff31fa76c634",
      "p": "on-success",
      "o": "76c2af13-7178-42b0-b8b9-f13182836d42"
    },
    {
      "s": "9b6f2cdf-1d36-4a5b-ab3b-ff31fa76c634",
      "p": "on-failure",
      "o": "76c2af13-7178-42b0-b8b9-f13182836d42"
    }
  ],
  "tags": [
    "T1531"
  ],
  "input_arguments": [
    {
      "name": "user_account",
      "type": "string",
      "description": "User account which will be deleted.",
      "value": "ARTUserAccount"
    },
    {
      "name": "user_name",
      "type": "string",
      "description": "New user name.",
      "value": "ARTUser"
    },
    {
      "name": "user_password",
      "type": "string",
      "description": "New user password.",
      "value": "ARTPassword"
    }
  ]
}