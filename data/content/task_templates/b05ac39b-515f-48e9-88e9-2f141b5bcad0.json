{
  "id": "b05ac39b-515f-48e9-88e9-2f141b5bcad0",
  "name": "Copy the users GnuPG directory with rsync (freebsd)",
  "description": "Copy the users GnuPG (.gnupg) directory on a FreeBSD system to a staging folder using the `rsync` command.\n",
  "platforms": [
    "linux"
  ],
  "steps": [
    {
      "id": "8153d1df-4875-47d9-bdb4-7b0f9c54659f",
      "type": "execute-command",
      "data": {
        "command": "mkdir #{output_folder}\nfind #{search_path} -type d -name '.gnupg' 2\u003e/dev/null -exec rsync -Rr {} #{output_folder} \\;\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "4ca7abdf-0a53-46ed-8db2-f7efbd569e43",
      "type": "execute-command",
      "data": {
        "command": "rm -rf #{output_folder}\n",
        "command_type": "sh"
      },
      "elevation_required": false
    },
    {
      "id": "85b86f5f-fb08-4f81-8c44-810b501bad47",
      "name": "Check dependency 1/1",
      "description": "Check if rsync is installed.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -x \"$(command -v rsync)\" ]; then exit 1; else exit 0; fi;\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "961ce406-f96a-4cfc-ba36-27776ca1ea98",
      "name": "Resolve dependency 1/1",
      "description": "Check if rsync is installed.\n",
      "type": "execute-command",
      "data": {
        "command": "(which pkg \u0026\u0026 pkg install -y rsync)\n",
        "command_type": ""
      },
      "elevation_required": false
    },
    {
      "id": "3c3fe8a8-9341-4511-a1ea-4379eb84e1d3",
      "name": "Re-check dependency 1/1",
      "description": "Check if rsync is installed.\n",
      "type": "execute-command",
      "data": {
        "command": "if [ ! -x \"$(command -v rsync)\" ]; then exit 1; else exit 0; fi;\n",
        "command_type": ""
      },
      "elevation_required": false
    }
  ],
