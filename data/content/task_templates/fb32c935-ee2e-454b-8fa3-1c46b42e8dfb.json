{
  "id": "fb32c935-ee2e-454b-8fa3-1c46b42e8dfb",
  "name": "Winlogon Userinit Key Persistence - PowerShell",
  "description": "PowerShell code to set Winlogon userinit key to execute a binary at logon along with userinit.exe.\n\nUpon successful execution, PowerShell will modify a registry value to execute cmd.exe upon logon/logoff.\n",
  "platforms": [
    "windows"
  ],
  "steps": [
    {
      "id": "8c30cc6b-321f-40f0-a8b3-bd30b29ec33c",
      "type": "execute-command",
      "data": {
        "command": "Set-ItemProperty \"HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Winlogon\\\" \"Userinit\" \"Userinit.exe, #{binary_to_execute}\" -Force\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "b57ac746-4069-47df-abb8-c4d7be062dff",
      "type": "execute-command",
      "data": {
        "command": "Remove-ItemProperty -Path \"HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Winlogon\\\" -Name \"Userinit\" -Force -ErrorAction Ignore\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    }
  ],
  "flows": [
    {
      "s": "8c30cc6b-321f-40f0-a8b3-bd30b29ec33c",
      "p": "on-success",
      "o": "b57ac746-4069-47df-abb8-c4d7be062dff"
    },
    {
      "s": "8c30cc6b-321f-40f0-a8b3-bd30b29ec33c",
      "p": "on-failure",
      "o": "b57ac746-4069-47df-abb8-c4d7be062dff"
    }
  ],
  "tags": [
    "T1547",
    "T1547.004"
  ],
  "input_arguments": [
    {
      "name": "binary_to_execute",
      "type": "path",
      "description": "Path of binary to execute",
      "value": "C:\\Windows\\System32\\cmd.exe"
    }
  ]
}