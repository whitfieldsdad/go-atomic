      "data": {
        "command": "$secure_pwd = \"#{password}\" | ConvertTo-SecureString -AsPlainText -Force\n$creds = New-Object System.Management.Automation.PSCredential -ArgumentList \"#{username}\", $secure_pwd\nConnect-ExchangeOnline -Credential $creds\nSet-AdminAuditLogConfig -UnifiedAuditLogIngestionEnabled $True\n",
        "command_type": "powershell"
      },
      "elevation_required": false
    },
    {
      "id": "89015d57-c238-4bbb-9a0e-680953855519",
      "name": "Check dependency 1/1",
      "description": "ExchangeOnlineManagement PowerShell module must be installed\n",
      "type": "execute-command",
      "data": {
        "command": "$RequiredModule = Get-Module -Name ExchangeOnlineManagement -ListAvailable\nif (-not $RequiredModule) {exit 1}\nif (-not $RequiredModule.ExportedCommands['Connect-ExchangeOnline']) {exit 1} else {exit 0}\n",
        "command_type": ""
      },
      "elevation_required": false
